@page "/blocks/filter-panel-6" 

@inherits UI_Blocks.Components.Pages.MainSection.Demo 

@ThemeLinks 

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
        <div style="height: 967px; width: @Width; float: right;">
            <SfSidebar class="flex flex-col bg-white dark:bg-gray-800" Width="@Width" Position="SidebarPosition.Right" Type="SidebarType.Push" IsOpen="@IsSidebarOpen" CloseOnDocumentClick="false" ShowBackdrop="true" role="complementary">
                <ChildContent>
                    <div>
                        <div class="flex justify-between items-center p-4 border-b border-gray-200 dark:border-gray-600">
                            <h2 class="text-base font-semibold text-gray-900 dark:text-white">Filters</h2>
                            <SfButton CssClass="e-flat e-primary text-sm" Content="Clear all" Type="button" aria-label="clear all" role="button"></SfButton>
                        </div>
                        <div class="p-4 pt-3 pb-0 flex">
                            <SfAutoComplete TValue="string" TItem="string" CssClass="w-full" Placeholder="Search" ShowClearButton="true" role="combobox"></SfAutoComplete>
                        </div>
                        <div class="pt-3">
                            <SfAccordion class="border-b-0 border-r-0" ExpandMode="ExpandMode.Single" role="accordion">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class="font-medium text-gray-900 dark:text-white">Industry</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div class="flex flex-col gap-4 py-1 px-1">
                                                <SfCheckBox TChecked="bool" Label="Technology" Checked="true" aria-label="technology" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Healthcare" Checked="true" aria-label="healthcare" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Finance" aria-label="finance" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Education" aria-label="education" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Manufacturing" aria-label="manufacturing" role="checkbox"></SfCheckBox>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                            <SfAccordion class="border-b-0 border-r-0" ExpandMode="ExpandMode.Single" role="accordion">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class="font-medium text-gray-900 dark:text-white">Company Size</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div class="flex flex-col gap-4 py-1 px-1">
                                                <SfCheckBox TChecked="bool" Label="1-50" Checked="true" aria-label="select range 1 to 50" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="51-200" Checked="true" aria-label="select range 51 to 200" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="201-500" aria-label="select range 201 to 500" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="501-1000" aria-label="select range 501 to 1000" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="1000+" aria-label="select range above 1000" role="checkbox"></SfCheckBox>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                            <SfAccordion class="border-b-0 border-r-0" ExpandMode="ExpandMode.Single" role="accordion">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class="font-medium text-gray-900 dark:text-white">Company Places</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div class="flex flex-col gap-4 py-1 px-1">
                                                <SfCheckBox TChecked="bool" Label="North America" Checked="true" aria-label="north america" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Europe" Checked="true" aria-label="europe" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Asia" aria-label="asia" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="South America" aria-label="south america" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Africa" aria-label="africa" role="checkbox"></SfCheckBox>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                            <SfAccordion class="border-b-0 border-r-0" ExpandMode="ExpandMode.Single" role="accordion">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class="font-medium text-gray-900 dark:text-white">Company Type</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div class="flex flex-col gap-4 py-1 px-1">
                                                <SfCheckBox TChecked="bool" Label="Public" aria-label="public" role="checkbox"></SfCheckBox>
                                                <SfCheckBox TChecked="bool" Label="Private" aria-label="private" role="checkbox"></SfCheckBox>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                        </div>
                        <div class="flex justify-end gap-3 w-full p-4 border-t border-gray-200 dark:border-gray-600">
                            <SfButton CssClass="text-sm e-primary" Content="Apply Filters" Type="button" aria-label="apply filters" role="button"></SfButton>
                        </div>
                    </div>
                </ChildContent>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
    <div class="p-3 absolute top-0 right-0">
        <SfButton CssClass="e-large e-icons e-chevron-left e-round" OnClick="@ToggleSidebar" Type="button" aria-label="expand menu" role="button"></SfButton>
    </div>
    <!-- SB Code - End -->
}
