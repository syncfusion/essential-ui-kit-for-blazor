@page "/blocks/filter-panel-3"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-800">
        <div style="height: 800px; width: @Width; float: right;">
            <SfSidebar class="flex flex-col bg-white dark:bg-gray-800" Width="@Width" Position="SidebarPosition.Right" Type="SidebarType.Push" IsOpen="@IsSidebarOpen" CloseOnDocumentClick="false" ShowBackdrop="true" role="complementary">
                <ChildContent>
                    <div>
                        <div class="flex justify-between items-center p-4 border-b border-gray-200 dark:border-gray-600">
                            <h2 class="text-base font-semibold text-gray-900 dark:text-white">Apply Filter</h2>
                            <SfButton CssClass="e-flat e-danger text-sm" Content="Discard" Type="button" aria-label="discard" role="button"></SfButton>
                        </div>
                        <div class="flex-grow overflow-y-auto p-4" style="min-height: 666px;">
                            <div class="grid grid-cols-1 gap-4">
                                <div>
                                    <h6 class="font-medium text-sm text-gray-500 dark:text-gray-400 mb-2 pt-1">Classification</h6>
                                    <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Category</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Category" Placeholder="Select category" aria-label="choose a category" role="listbox"></SfDropDownList>
                                </div>
                                <div>
                                    <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Tags</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Tags" Placeholder="Select tags" aria-label="choose a tags" role="listbox"></SfDropDownList>
                                </div>
                                <div>
                                    <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Priority</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Priority" Placeholder="Select priority levels" aria-label="choose a priority levels" role="listbox"></SfDropDownList>
                                </div>
                            </div>
                            <hr class="w-full border-gray-200 dark:border-gray-600 mt-4 mb-3">
                            <div class="grid grid-cols-1 gap-4">
                                <div>
                                    <h6 class="font-medium text-sm text-gray-500 dark:text-gray-400 mb-2">Assignment</h6>
                                    <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Agent</label>
                                    <SfDropDownList TItem="string" TValue="string" Placeholder="Select agent" aria-label="choose an agent" role="listbox"></SfDropDownList>
                                </div>
                                <div>
                                    <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Requester</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Requester" Placeholder="Select requester" aria-label="choose a requester" role="listbox"></SfDropDownList>
                                </div>
                            </div>
                            <hr class="w-full border-gray-200 dark:border-gray-600 mt-4 mb-3">
                            <div class="grid grid-cols-1 gap-4">
                                <div>
                                    <h6 class="font-medium text-sm text-gray-500 dark:text-gray-400 mb-2">Status and Timeline</h6>
                                    <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Status</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Status" Placeholder="Open" aria-label="choose a status" role="listbox"></SfDropDownList>
                                </div>
                                <div>
                                    <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Response Due</label>
                                    <SfDatePicker TValue="DateTime?" CssClass="shadow-none" Placeholder="Pick a due date" aria-label="select a due date" role="combobox"></SfDatePicker>
                                </div>
                            </div>
                        </div>
                        <div class="flex justify-end gap-3 w-full p-4 border-t border-gray-200 dark:border-gray-600 e-bigger">
                            <SfButton CssClass="e-flat e-primary border-0" Content="Save as" Type="button" aria-label="save as" role="button"></SfButton>
                            <SfButton CssClass="e-primary" Content="Apply" Type="button" aria-label="apply" role="button"></SfButton>
                        </div>
                    </div>
                </ChildContent>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
    <div class="p-3 absolute top-0 right-0">
        <SfButton CssClass="e-large e-icons e-chevron-left e-round" OnClick="@ToggleSidebar" Type="button" aria-label="expand menu" role="button"></SfButton>
    </div>
    <!-- SB Code - End -->
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div style="height: 824px; width: @Width; float: right;">
            <SfSidebar class="d-flex flex-column bg-body" Width="@Width" Position="SidebarPosition.Right" Type="SidebarType.Push" IsOpen="@IsSidebarOpen" CloseOnDocumentClick="false" ShowBackdrop="true" role="complementary">
                <ChildContent>
                    <div>
                        <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                            <h2 class="h6 mb-0 fw-bold text-body">Apply Filter</h2>
                            <SfButton CssClass="e-flat e-danger" Content="Discard" Type="button" aria-label="discard" role="button"></SfButton>
                        </div>
                        <div class="flex-grow overflow-auto p-3" style="min-height: 666px;">
                            <div class="row g-3">
                                <div class="col-12">
                                    <h6 class="fs-6 fw-medium text-muted mb-2 pt-1">Classification</h6>
                                    <label class="fs-6 mb-1 fw-medium text-body">Category</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Category" Placeholder="Select category" aria-label="choose a category" role="listbox"></SfDropDownList>
                                </div>
                                <div class="col-12">
                                    <label class="fs-6 mb-1 fw-medium text-body">Tags</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Tags" Placeholder="Select tags" aria-label="choose a tags" role="listbox"></SfDropDownList>
                                </div>
                                <div class="col-12">
                                    <label class="fs-6 mb-1 fw-medium text-body">Priority</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Priority" Placeholder="Select priority levels" aria-label="choose a priority levels" role="listbox"></SfDropDownList>
                                </div>
                            </div>
                            <hr class="w-100 border-top opacity-100 my-3" />
                            <div class="row g-3">
                                <div class="col-12">
                                    <h6 class="fs-6 fw-medium text-muted mb-2">Assignment</h6>
                                    <label class="fs-6 mb-1 fw-medium text-body">Agent</label>
                                    <SfDropDownList TItem="string" TValue="string" Placeholder="Select agent" aria-label="choose an agent" role="listbox"></SfDropDownList>
                                </div>
                                <div class="col-12">
                                    <label class="fs-6 mb-1 fw-medium text-body">Requester</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Requester" Placeholder="Select requester" aria-label="choose a requester" role="listbox"></SfDropDownList>
                                </div>
                            </div>
                            <hr class="w-100 border-top opacity-100 my-3" />
                            <div class="row g-3">
                                <div class="col-12">
                                    <h6 class="fs-6 fw-medium text-muted mb-2">Status and Timeline</h6>
                                    <label class="fs-6 mb-1 fw-medium text-body">Status</label>
                                    <SfDropDownList TItem="string" TValue="string" DataSource="@Status" Placeholder="Open" aria-label="choose a status" role="listbox"></SfDropDownList>
                                </div>
                                <div class="col-12 pb-4">
                                    <label class="fs-6 mb-1 fw-medium text-body">Response Due</label>
                                    <SfDatePicker TValue="DateTime?" CssClass="shadow-none" Placeholder="Pick a due date" aria-label="select a due date" role="combobox"></SfDatePicker>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end gap-3 w-100 p-3 border-top">
                            <SfButton CssClass="e-flat" Content="Save as" IsPrimary="true" Type="button" aria-label="save as" role="button"></SfButton>
                            <SfButton CssClass="e-primary" Content="Apply" Type="button" aria-label="apply" role="button"></SfButton>
                        </div>
                    </div>
                </ChildContent>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
    <div class="p-3 position-absolute top-0 end-0">
        <SfButton CssClass="e-large e-icons e-chevron-left e-round" OnClick="@ToggleSidebar" Type="button" aria-label="expand menu" role="button"></SfButton>
    </div>
    <!-- SB Code - End -->
}
