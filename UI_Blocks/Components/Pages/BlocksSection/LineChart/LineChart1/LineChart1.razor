@page "/blocks/line-chart-1"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
        <div class="h-screen flex justify-center p-4 sm:p-6">
            <div class="w-full" style="max-width: 1080px;">
                <div class="flex justify-between flex-col sm:flex-row sm:items-start gap-4">
                    <div>
                        <h1 class="text-base font-medium text-gray-900 dark:text-white">Annual Revenue Overview ($)</h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">Data for the year 2024</p>
                    </div>
                    <div class="flex justify-between gap-4" style="height: 30px">
                        <SfDropDownButton @ref="DropDownButton" Content="2024" Type="button" aria-label="choose a year" role="button">
                            <DropDownButtonEvents Opened="@(args => IsDropdownOpen = true)" Closed="@(args => IsDropdownOpen = false)"></DropDownButtonEvents>
                            <DropDownMenuItems>
                                <DropDownMenuItem Text="2024"></DropDownMenuItem>
                                <DropDownMenuItem Text="2023"></DropDownMenuItem>
                                <DropDownMenuItem Text="2022"></DropDownMenuItem>
                                <DropDownMenuItem Text="2021"></DropDownMenuItem>
                                <DropDownMenuItem Text="2020"></DropDownMenuItem>
                            </DropDownMenuItems>
                        </SfDropDownButton>
                        <SfButton class="sm:block hidden" Content="View Report" Type="button" aria-label="view report" role="button"></SfButton>
                        <SfButton class="block sm:hidden" IconCss="e-icons e-description" Type="button" aria-label="view report" role="button"></SfButton>
                    </div>
                </div>
                <div class="mt-5">
                    <SfChart @ref="Chart" Width="100%" Height="300px" Theme="@(CurrentTheme == "tailwind-dark" ? Theme.Tailwind3Dark : Theme.Tailwind3)">
                        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" Interval=1 LabelRotation="@XAxisLabelRotation">
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        </ChartPrimaryXAxis>
                        <ChartPrimaryYAxis Minimum="0" Maximum="25000" Interval="5000" LabelFormat="{value}">
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        </ChartPrimaryYAxis>
                        <ChartSeriesCollection>
                            <ChartSeries DataSource="@LineChartData" XName="Month" YName="Amount" Type="ChartSeriesType.Spline" Width="3" Fill="#267DDA">
                                <ChartMarker Visible="true" Height="8" Width="8" IsFilled="true">
                                    <ChartMarkerBorder Color="@(CurrentTheme == "tailwind-dark" ? "#1F2937" : "#FFFFFF")"></ChartMarkerBorder>
                                </ChartMarker>
                            </ChartSeries>
                        </ChartSeriesCollection>
                        <ChartTooltipSettings Enable="true" Shared="true" EnableMarker="false" Header="" Format="${point.x} : ${point.y}">
                        </ChartTooltipSettings>
                    </SfChart>
                </div>
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div class="vh-100 d-flex justify-content-center p-4 p-sm-6">
            <div class="w-100" style="max-width: 1080px;">
                <div class="d-flex justify-content-between flex-column flex-sm-row align-items-sm-start gap-3">
                    <div>
                        <h1 class="fs-6 fw-medium">Annual Revenue Overview ($)</h1>
                        <p class="small text-body-secondary dark:text-gray-400 mt-2">Data for the year 2024</p>
                    </div>
                    <div class="d-flex justify-content-between gap-sm-3">
                        <SfDropDownButton @ref="DropDownButton" CssClass="e-outline" Content="2024" Type="button" aria-label="choose a year" role="button">
                            <DropDownButtonEvents Opened="@(args => IsDropdownOpen = true)" Closed="@(args => IsDropdownOpen = false)"></DropDownButtonEvents>
                            <DropDownMenuItems>
                                <DropDownMenuItem Text="2024"></DropDownMenuItem>
                                <DropDownMenuItem Text="2023"></DropDownMenuItem>
                                <DropDownMenuItem Text="2022"></DropDownMenuItem>
                                <DropDownMenuItem Text="2021"></DropDownMenuItem>
                                <DropDownMenuItem Text="2020"></DropDownMenuItem>
                            </DropDownMenuItems>
                        </SfDropDownButton>
                        <SfButton CssClass="e-outline" class="d-none d-sm-block" Content="View Report" Type="button" aria-label="view report" role="button"></SfButton>
                        <SfButton CssClass="e-outline" class="d-block d-sm-none" IconCss="e-icons e-description" Type="button" aria-label="view report" role="button"></SfButton>
                    </div>
                </div>
                <div class="mt-3">
                    <SfChart @ref="Chart" Width="100%" Height="300px" Theme="@(CurrentTheme == "bootstrap5.3-dark" ? Theme.Bootstrap5Dark : Theme.Bootstrap5)">
                        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" Interval=1 LabelRotation="@XAxisLabelRotation">
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        </ChartPrimaryXAxis>
                        <ChartPrimaryYAxis Minimum="0" Maximum="25000" Interval="5000" LabelFormat="{value}">
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        </ChartPrimaryYAxis>
                        <ChartSeriesCollection>
                            <ChartSeries DataSource="@LineChartData" XName="Month" YName="Amount" Type="ChartSeriesType.Spline" Width="3" Fill="#267DDA">
                                <ChartMarker Visible="true" Height="8" Width="8" IsFilled="true">
                                    <ChartMarkerBorder Color="@(CurrentTheme == "bootstrap5.3-dark" ? "#212529" : "#FFFFFF")"></ChartMarkerBorder>
                                </ChartMarker>
                            </ChartSeries>
                        </ChartSeriesCollection>
                        <ChartTooltipSettings Enable="true" Shared="true" EnableMarker="false" Header="" Format="${point.x} : ${point.y}"></ChartTooltipSettings>
                    </SfChart>
                </div>
            </div>
        </div>
    </section>
}