                            <DropDownMenuItem Text="This month"></DropDownMenuItem>
                            <DropDownMenuItem Text="Last month"></DropDownMenuItem>
                        </DropDownMenuItems>
                    </SfDropDownButton>
                </div>
                <div class="d-flex align-items-center gap-2 mt-4">
                    <p class="fs-5 fw-semibold text-body mb-0">+72.9%</p>
                    <div class="d-flex align-items-center gap-1 text-success ms-2"><span class="e-icons e-arrow-up small"></span><p class="small mb-0">2.9%</p></div>
                    <p class="small text-body-secondary mb-0">past 7 days</p>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-2 mb-1">
                    <p class="small text-body-secondary mb-0">Better than last week</p>
                    <SfDropDownButton @ref="RangeDropdown" CssClass="e-outline d-none d-sm-block" IconCss="e-icons e-day" Content="Last month" Type="button" aria-label="choose a range" role="button">
                        <DropDownButtonEvents Opened="@(args => IsRangeDropdownOpen = true)" Closed="@(args => IsRangeDropdownOpen = false)"></DropDownButtonEvents>
                        <DropDownMenuItems>
                            <DropDownMenuItem Text="Today"></DropDownMenuItem>
                            <DropDownMenuItem Text="Yesterday"></DropDownMenuItem>
                            <DropDownMenuItem Text="This week"></DropDownMenuItem>
                            <DropDownMenuItem Text="Last week"></DropDownMenuItem>
                            <DropDownMenuItem Text="This month"></DropDownMenuItem>
                            <DropDownMenuItem Text="Last month"></DropDownMenuItem>
                        </DropDownMenuItems>
                    </SfDropDownButton>
                </div>
                <SfChart Width="100%" Height="300px" Theme="@(CurrentTheme == "bootstrap5.3-dark" ? Theme.Bootstrap5Dark : Theme.Bootstrap5)">
                    <ChartArea>
                        <ChartAreaBorder Width="0"></ChartAreaBorder>
                    </ChartArea>
                    <ChartMargin Left="0"></ChartMargin>
                    <ChartPrimaryXAxis Interval="1" ValueType="Syncfusion.Blazor.Charts.ValueType.Category">
