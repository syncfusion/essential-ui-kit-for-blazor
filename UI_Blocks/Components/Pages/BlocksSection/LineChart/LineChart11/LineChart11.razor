                        </ChartSeriesCollection>
                        <ChartTooltipSettings Enable="true" Shared="false" ShowNearestTooltip="true" Format="Dec 10, 18:21 PM<br/>Temp: ${point.y}" Header="" EnableMarker="false"></ChartTooltipSettings>
                        <ChartLegendSettings Visible="true" Padding="15"></ChartLegendSettings>
                    </SfChart>
                </div>
            </div>
        </div>
    </section>
}