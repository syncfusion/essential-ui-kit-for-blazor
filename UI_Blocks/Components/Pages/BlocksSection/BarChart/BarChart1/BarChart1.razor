@page "/blocks/bar-chart-1"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
        <div class="h-screen flex justify-center p-4 sm:p-6">
            <div class="w-full" style="max-width: 576px;">
                <div class="flex flex-col sm:flex-row justify-between sm:items-center">
                    <h1 class="text-xl font-semibold text-gray-900 dark:text-white">Top Earning Projects</h1>
                    <div class="w-36 my-4">
                        <SfDatePicker TValue="DateTime?" Start="CalendarView.Year" Depth="CalendarView.Year" CssClass="shadow-none border-none" Placeholder="Last Month" aria-label="enter a month here" role="combobox"></SfDatePicker>
                    </div>
                </div>
                <div class="mt-4">
                    <SfChart @ref="Chart" Theme="@(CurrentTheme == "tailwind-dark" ? Theme.Tailwind3Dark : Theme.Tailwind3)" Height="330px">
                        <ChartArea>
                            <ChartAreaBorder Width="0"></ChartAreaBorder>
                        </ChartArea>
                        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" LabelRotation="@XAxisLabelRotation" Interval="1">
                            <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryXAxis>
                        <ChartPrimaryYAxis Minimum="0" Maximum="700" Interval="140" LabelFormat="${value}K">
                            <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                            <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryYAxis>
                        <ChartTooltipSettings Enable="true" EnableMarker="false"></ChartTooltipSettings>
                        <ChartSeriesCollection>
                            <ChartSeries Fill="#267DDA" DataSource="@BarChartData" XName="XAxis" YName="YAxis" Type="ChartSeriesType.Column"></ChartSeries>
                        </ChartSeriesCollection>
                    </SfChart>
                </div>
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div class="vh-100 d-flex justify-content-center p-3 p-sm-4">
            <div class="w-100" style="max-width: 576px;">
                <div class="d-flex flex-column flex-sm-row gap-1 justify-content-between align-items-start align-items-sm-center">
                    <h1 class="fs-6 fw-medium text-body mb-sm-0">Top Earning Projects</h1>
                    <div style="width: 144px;">
                        <SfDatePicker TValue="DateTime?" Start="CalendarView.Year" Depth="CalendarView.Year" CssClass="shadow-none border-none" Placeholder="Last Month" aria-label="enter a month here" role="combobox"></SfDatePicker>
                    </div>
                </div>
                <div class="mt-4">
                    <SfChart @ref="Chart" Theme="@(CurrentTheme == "bootstrap5.3-dark" ? Theme.Bootstrap5Dark : Theme.Bootstrap5)" Height="330px">
                        <ChartArea>
                            <ChartAreaBorder Width="0"></ChartAreaBorder>
                        </ChartArea>
                        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" LabelRotation="@XAxisLabelRotation" Interval="1">
                            <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryXAxis>
                        <ChartPrimaryYAxis Minimum="0" Maximum="700" Interval="140" LabelFormat="${value}K">
                            <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                            <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryYAxis>
                        <ChartTooltipSettings Enable="true" EnableMarker="false"></ChartTooltipSettings>
                        <ChartSeriesCollection>
                            <ChartSeries Fill="#267DDA" DataSource="@BarChartData" XName="XAxis" YName="YAxis" Type="ChartSeriesType.Column"></ChartSeries>
                        </ChartSeriesCollection>
                    </SfChart>
                </div>
            </div>
        </div>
    </section>
}