                    </div>
                </div>
                <div class="mt-3">
                    <SfChart @ref="Chart" Theme="@(CurrentTheme == "bootstrap5.3-dark" ? Theme.Bootstrap5Dark : Theme.Bootstrap5)">
                        <ChartArea>
                            <ChartAreaBorder Width="0"></ChartAreaBorder>
                        </ChartArea>
                        <ChartEvents OnPointRender="@OnPointRender" />
                        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" LabelRotation="@XAxisLabelRotation" Interval="1">
                            <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryXAxis>
                        <ChartPrimaryYAxis Minimum="0" Maximum="35" Interval="5" LabelFormat="{value}°C">
                            <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                            <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryYAxis>
                        <ChartSeriesCollection>
                            <ChartSeries DataSource="@BarChartData" XName="Month" YName="Temperature" Type="ChartSeriesType.Column">
                                <ChartMarker>
                                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Outer">
                                        <ChartDataLabelFont Color="#6B7280"></ChartDataLabelFont>
                                    </ChartDataLabel>
                                </ChartMarker>
                                <ChartCornerRadius TopRight="4" TopLeft="4"></ChartCornerRadius>
                            </ChartSeries>
                        </ChartSeriesCollection>
                        <ChartLegendSettings Visible="true"></ChartLegendSettings>
                    </SfChart>
                </div>
                <div class="row row-cols-2 row-cols-sm-auto justify-content-center g-2 g-sm-4 pt-0 pt-sm-3 fs-6">
                    <div class="d-flex align-items-center gap-2 ps-5 ps-sm-0">
                        <div style="background-color: #f59e0b;height: 16px; width: 16px;"></div>
                        <span class="small">1°C to 10°C</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div style="background-color: #FFB300;height: 16px;width: 16px;"></div>
                        <span class="small">11°C to 20°C</span>
                    </div>
                    <div class="d-flex align-items-center gap-2 ps-5 ps-sm-0">
                        <div style="background-color: #FB8C00;height: 16px;width: 16px;"></div>
                        <span class="small">21°C to 25°C</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div style="background-color: #F4511E;height: 16px;width: 16px;"></div>
                        <span class="small">25°C to 30°C</span>
                    </div>
                </div>

            </div>
        </div>
    </section>
}