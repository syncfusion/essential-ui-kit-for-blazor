@page "/blocks/bar-chart-3"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
        <div class="h-screen flex justify-center items-center p-4 sm:p-6">
            <div class="w-full" style="max-width: 730px;">
                <div class="flex justify-between items-center mb-4">
                    <div>
                        <h1 class="text-base font-semibold text-gray-900 dark:text-white">Weather History</h1>
                        <p class="text-xs mt-2 sm:mt-0 text-gray-500 dark:text-white">Location: <span class="font-medium text-gray-800 dark:text-white">Charlotte, North Carolina</span></p>
                    </div>
                    <SfButton CssClass="e-outline hidden sm:inline-block" Content="Download Report" Type="button" aria-label="download report" role="button"></SfButton>
                    <SfButton CssClass="e-outline block sm:hidden" IconCss="e-icons e-download" Type="button" aria-label="download report" role="button"></SfButton>
                </div>
                <div class="mb-4">
                    <p class="text-xs hidden sm:block text-gray-900 mb-1.5 dark:text-white">December</p>
                    <div class="flex justify-between flex-col-reverse gap-6 sm:flex-row sm:items-center">
                        <div class="text-gray-900 dark:text-white">
                            <p class="text-xs block sm:hidden">December</p>
                            <div class="flex gap-3 items-center">
                                <h1 class="text-xl font-semibold">13 / 1</h1>
                                <p class="text-xs">°C | F</p>
                            </div>
                        </div>
                        <div class="flex gap-3">
                            <SfButtonGroup class="e-btn-group hidden sm:block">
                                <input Type="radio" id="day" name="align" value="D" aria-label="day" role="button" />
                                <label class="e-btn" for="day">D</label>
                                <input Type="radio" id="week" name="align" value="W" aria-label="week" role="button" />
                                <label class="e-btn" for="week">W</label>
                                <input Type="radio" id="month" name="align" value="M" aria-label="month" role="button" />
                                <label class="e-btn" for="month">M</label>
                                <input Type="radio" id="year" name="align" value="Y" checked aria-label="year" role="button" />
                                <label class="e-btn" for="year">Y</label>
                                <input Type="radio" id="custom" name="align" value="Custom" aria-label="custom" role="button" />
                                <label class="e-btn" for="custom">Custom</label>
                            </SfButtonGroup>
                            <div class="flex justify-between items-center grow">
                                <SfDropDownButton @ref=PeriodDropDown CssClass="inline-block sm:hidden" Content="Year" Items="@PeriodOptions" Type="button" aria-label="choose a range" role="button">
                                    <DropDownButtonEvents Opened="@(args => IsPeriodDropdownOpen = true)" Closed="@(args => IsPeriodDropdownOpen = false)"></DropDownButtonEvents>
                                </SfDropDownButton>
                                <SfDropDownButton @ref=WeatherDropDown CssClass="inline-block" Content="Temperature" Items="@WeatherOptions" Type="button" aria-label="choose a metric" role="button">
                                    <DropDownButtonEvents Opened="@(args => IsTempDropdownOpen = true)" Closed="@(args => IsTempDropdownOpen = false)"></DropDownButtonEvents>
                                </SfDropDownButton>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex items-center gap-3 text-gray-500 text-xs mb-4 dark:text-white">
                    <p>Record temps: <span class="font-medium dark:text-white">26° / -13°C</span></p>
                    <div class="border-l h-6 border-gray-200 dark:border-gray-600"></div>
                    <div class="h-4 border-gray-300"></div>
                    <p>Avg rainfall: <span class="font-medium dark:text-white">9.9 cm</span></p>
                    <div class="border-l h-6 border-gray-200 dark:border-gray-600"></div>
                    <div class="h-4 border-gray-300"></div>
                    <p class="text-xs">Snow: <span class="font-medium dark:text-white">2 days</span></p>
                </div>
                <SfChart @ref=Chart Width="100%" Height="200px" Theme="@(CurrentTheme == "tailwind-dark" ? Theme.Tailwind3Dark : Theme.Tailwind3)">
                    <ChartArea>
                        <ChartAreaBorder Width="0"></ChartAreaBorder>
                    </ChartArea>
                    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" LabelRotation="@XAxisLabelRotation" Interval="1">
                        <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                        <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                        <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                        <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                    </ChartPrimaryXAxis>
                    <ChartPrimaryYAxis Minimum="0" Maximum="30" Interval="10" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
                        <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                        <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                        <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                        <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                    </ChartPrimaryYAxis>
                    <ChartArea>
                        <ChartAreaBorder Width="0" />
                    </ChartArea>
                    <ChartSeriesCollection>
                        <ChartSeries DataSource="@BarChartData" Type="ChartSeriesType.RangeColumn" XName="Days" High="HighTemp" Low="LowTemp" Fill="#267DDA" ColumnSpacing="0.1" CornerRadius="@(new ChartCornerRadius { TopLeft = 4, TopRight = 4, BottomLeft = 4, BottomRight = 4 })">
                        </ChartSeries>
                    </ChartSeriesCollection>
                </SfChart>
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div class="vh-100 d-flex justify-content-center align-items-center p-4 p-sm-6">
            <div class="w-100" style="max-width: 730px;">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="fs-6 fw-medium text-body">Weather History</h1>
                        <p class="fs-6 mt-2 sm-mt-0 text-body-secondary">Location: <span class="font-medium text-gray-800 dark:text-white">Charlotte, North Carolina</span></p>
                    </div>
                    <SfButton CssClass="e-outline d-none d-sm-block" Content="Download Report" Type="button" aria-label="download report" role="button"></SfButton>
                    <SfButton CssClass="e-outline d-sm-none" IconCss="e-icons e-download" Type="button" aria-label="download report" role="button"></SfButton>
                </div>
                <div class="mb-4">
                    <p class="fs-6 d-none d-sm-block mb-1.5">December</p>
                    <div class="d-flex justify-content-between flex-column-reverse gap-3 flex-sm-row align-items-sm-center">
                        <div>
                            <span class="fs-6 d-sm-none">December</span>
                            <div class="d-flex gap-3 align-items-center">
                                <h1 class="h4 fw-semibold mb-0">13 / 1</h1>
                                <span class="small">°C | F</span>
                            </div>
                        </div>
                        <div class="d-flex gap-3">
                            <SfButtonGroup class="e-btn-group d-none d-sm-block">
                                <input Type="radio" id="day" name="align" value="D" aria-label="day" role="button" />
                                <label class="e-btn" for="day">D</label>
                                <input Type="radio" id="week" name="align" value="W" aria-label="week" role="button" />
                                <label class="e-btn" for="week">W</label>
                                <input Type="radio" id="month" name="align" value="M" aria-label="month" role="button" />
                                <label class="e-btn" for="month">M</label>
                                <input Type="radio" id="year" name="align" value="Y" checked aria-label="year" role="button" />
                                <label class="e-btn" for="year">Y</label>
                                <input Type="radio" id="custom" name="align" value="Custom" aria-label="custom" role="button" />
                                <label class="e-btn" for="custom">Custom</label>
                            </SfButtonGroup>
                            <div class="d-flex justify-content-between align-items-center flex-grow-1">
                                <SfDropDownButton @ref=PeriodDropDown CssClass="inline-block d-sm-none" Content="Year" Items="@PeriodOptions" Type="button" aria-label="choose a range" role="button">
                                    <DropDownButtonEvents Opened="@(args => IsPeriodDropdownOpen = true)" Closed="@(args => IsPeriodDropdownOpen = false)"></DropDownButtonEvents>
                                </SfDropDownButton>
                                <SfDropDownButton @ref=WeatherDropDown CssClass="inline-block e-outline" Content="Temperature" Items="@WeatherOptions" Type="button" aria-label="choose a metric" role="button">
                                    <DropDownButtonEvents Opened="@(args => IsTempDropdownOpen = true)" Closed="@(args => IsTempDropdownOpen = false)"></DropDownButtonEvents>
                                </SfDropDownButton>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2 flex-column flex-sm-row justify-content-start align-items-sm-center small lh-sm text-body-secondary mb-2">
                    <span class="mb-0">Record temps:</span>
                    <div class="d-flex align-items-center gap-2 gap-sm-3">
                        <span class="fw-medium mb-0">26° / -13°C</span>
                        <div class="border-start border-1 border-dark-subtle" style="height: 16px;"></div>
                        <span class="mb-0">Avg rainfall: <span class="fw-medium">9.9 cm</span></span>
                        <div class="border-start border-1 border-dark-subtle" style="height: 16px;"></div>
                        <span class="mb-0">Snow: <span class="fw-medium">2 days</span></span>
                    </div>
                </div>
                <SfChart @ref="Chart" Width="100%" Height="200px" Theme="@(CurrentTheme == "bootstrap5.3-dark" ? Theme.Bootstrap5Dark : Theme.Bootstrap5)">
                    <ChartArea>
                        <ChartAreaBorder Width="0"></ChartAreaBorder>
                    </ChartArea>
                    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" LabelRotation="@XAxisLabelRotation" Interval="1">
                        <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                        <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                        <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                        <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                    </ChartPrimaryXAxis>
                    <ChartPrimaryYAxis Minimum="0" Maximum="30" Interval="10" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
                        <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                        <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                        <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                        <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                    </ChartPrimaryYAxis>
                    <ChartArea>
                        <ChartAreaBorder Width="0" />
                    </ChartArea>
                    <ChartSeriesCollection>
                        <ChartSeries DataSource="@BarChartData" Type="ChartSeriesType.RangeColumn" XName="Days" High="HighTemp" Low="LowTemp" Fill="#267DDA" ColumnSpacing="0.1" CornerRadius="@(new ChartCornerRadius { TopLeft = 4, TopRight = 4, BottomLeft = 4, BottomRight = 4 })">
                        </ChartSeries>
                    </ChartSeriesCollection>
                </SfChart>
            </div>
        </div>
    </section>
}