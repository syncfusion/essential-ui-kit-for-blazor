@page "/blocks/bar-chart-3"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
        <div class="h-screen flex justify-center items-center p-4 sm:p-6">
            <div class="w-full" style="max-width: 730px;">
                <div class="flex justify-between items-center mb-4">
                    <div>
                        <h1 class="text-base font-medium text-gray-900 dark:text-white mb-2">Weather History</h1>
                        <p class="text-xs mt-2 sm:mt-0 text-gray-500 dark:text-gray-400">Location: <span class="font-medium">Charlotte, North Carolina</span></p>
                    </div>
                    <SfButton CssClass="e-outline hidden sm:inline-block" Content="Download Report" Type="button" aria-label="download report" role="button"></SfButton>
                    <SfButton CssClass="e-outline block sm:hidden" IconCss="e-icons e-download" Type="button" aria-label="download report" role="button"></SfButton>
                </div>
                <div class="mb-4">
                    <p class="text-xs hidden sm:block text-gray-900 mb-1.5 dark:text-white">December</p>
                    <div class="flex justify-between flex-col-reverse gap-6 sm:flex-row sm:items-center">
                        <div class="text-gray-900 dark:text-white">
                            <p class="text-xs block sm:hidden">December</p>
                            <div class="flex gap-3 items-center">
                                <h1 class="text-xl font-semibold">13 / 1</h1>
                                <p class="text-xs">°C | F</p>
                            </div>
                        </div>
                        <div class="flex gap-3">
                            <SfButtonGroup class="e-btn-group hidden sm:flex">
                                <input Type="radio" id="day" name="align" value="D" aria-label="day" role="button" />
                                <label class="e-btn" for="day">D</label>
                                <input Type="radio" id="week" name="align" value="W" aria-label="week" role="button" />
                                <label class="e-btn" for="week">W</label>
                                <input Type="radio" id="month" name="align" value="M" aria-label="month" role="button" />
                                <label class="e-btn" for="month">M</label>
                                <input Type="radio" id="year" name="align" value="Y" checked aria-label="year" role="button" />
                                <label class="e-btn" for="year">Y</label>
                                <input Type="radio" id="custom" name="align" value="Custom" aria-label="custom" role="button" />
                                <label class="e-btn" for="custom">Custom</label>
                            </SfButtonGroup>
                            <div class="flex justify-between items-center grow">
                                <SfDropDownButton @ref="PeriodDropDown" CssClass="inline-block sm:hidden" Content="Year" Type="button" aria-label="choose a range" role="button">
                                    <DropDownButtonEvents Opened="@(args => IsPeriodDropdownOpen = true)" Closed="@(args => IsPeriodDropdownOpen = false)"></DropDownButtonEvents>
                                    <DropDownMenuItems>
                                        <DropDownMenuItem Text="Day"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Week"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Month"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Year"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Custom"></DropDownMenuItem>
                                    </DropDownMenuItems>
                                </SfDropDownButton>
                                <SfDropDownButton @ref="WeatherDropDown" CssClass="inline-block" Content="Temperature" Type="button" aria-label="choose a metric" role="button">
                                    <DropDownButtonEvents Opened="@(args => IsTempDropdownOpen = true)" Closed="@(args => IsTempDropdownOpen = false)"></DropDownButtonEvents>
                                    <DropDownMenuItems>
                                        <DropDownMenuItem Text="Temperature"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Wind speed"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Air pressure"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Snowfall"></DropDownMenuItem>
                                        <DropDownMenuItem Text="Visibility"></DropDownMenuItem>
                                    </DropDownMenuItems>
                                </SfDropDownButton>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex flex-wrap items-center gap-3 text-gray-500 text-xs mb-4 dark:text-white">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:gap-1">
                        <p>Record temps:</p>
                        <p class="font-medium dark:text-white sm:ml-1">26° / -13°C</p>
                    </div>
                    <div class="border-l h-6 border-gray-200 dark:border-gray-600"></div>
                    <div class="flex flex-col sm:flex-row sm:items-center sm:gap-1">
                        <p>Avg rainfall:</p>
                        <p class="font-medium dark:text-white sm:ml-1">9.9 cm</p>
                    </div>
                    <div class="border-l h-6 border-gray-200 dark:border-gray-600"></div>
                    <div class="flex flex-col sm:flex-row sm:items-center sm:gap-1">
                        <p>Snow:</p>
                        <p class="font-medium dark:text-white sm:ml-1">2 days</p>
                    </div>
                </div>
                <SfChart @ref="Chart" Width="100%" Height="200px" Theme="@(CurrentTheme == "tailwind-dark" ? Theme.Tailwind3Dark : Theme.Tailwind3)">
                    <ChartArea>
                        <ChartAreaBorder Width="0"></ChartAreaBorder>
                    </ChartArea>
                    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" LabelRotation="@XAxisLabelRotation" Interval="1">
                        <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                        <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                        <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                        <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                    </ChartPrimaryXAxis>
                    <ChartPrimaryYAxis Minimum="0" Maximum="30" Interval="10" EdgeLabelPlacement="Syncfusion.Blazor.Charts.EdgeLabelPlacement.Shift">
                        <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                        <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                        <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                        <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                    </ChartPrimaryYAxis>
                    <ChartArea>
                        <ChartAreaBorder Width="0"></ChartAreaBorder>
                    </ChartArea>
                    <ChartSeriesCollection>
                        <ChartSeries DataSource="@BarChartData" Type="Syncfusion.Blazor.Charts.ChartSeriesType.RangeColumn" XName="Days" High="HighTemp" Low="LowTemp" Fill="#267DDA" ColumnSpacing="0.1" CornerRadius="@(new ChartCornerRadius { TopLeft = 4, TopRight = 4, BottomLeft = 4, BottomRight = 4 })"></ChartSeries>
                    </ChartSeriesCollection>
                </SfChart>
            </div>
        </div>
    </section>
}
