@page "/blocks/bar-chart-2"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
        <div class="h-screen flex justify-center p-4 sm:p-6" style="min-height: 674px;">
            <div class="w-full" style="max-width: 900px;">
                <div class="flex justify-between items-start mb-5">
                    <div>
                        <h1 class="text-base font-medium text-gray-900 dark:text-white mb-2">Daily Expense</h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Data from 21-27 Dec, 2024</p>
                    </div>
                    <SfButton Class="e-outline hidden sm:block" Content="View Report" type="button" aria-label="view report" role="button"></SfButton>
                    <SfButton Class="e-outline sm:hidden" IconCss="e-icons e-description" type="button" aria-label="view report" role="button"></SfButton>
                </div>
                <div class="flex flex-wrap items-center">
                    <div class="w-full md:w-3/5 lg:w-7/12">
                        <SfChart Width="100%" Height="220px" Theme="@(CurrentTheme == "tailwind-dark" ? Theme.Tailwind3Dark : Theme.Tailwind3)">
                            <ChartArea>
                                <ChartAreaBorder Width="0"></ChartAreaBorder>
                            </ChartArea>
                            <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category">
                                <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                                <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                                <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                                <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                                <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                                <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                            </ChartPrimaryXAxis>
                            <ChartPrimaryYAxis >
                                <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                                <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                                <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                                <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                                <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                                <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                            </ChartPrimaryYAxis>
                            <ChartSeriesCollection>
                                <ChartSeries Name="Food & Drink" DataSource="@BarChartData" XName="XAxis" YName="YAxis1" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#267DDA"></ChartSeries>
                                <ChartSeries Name="Grocery" DataSource="@BarChartData" XName="XAxis" YName="YAxis2" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#01A8B5"></ChartSeries>
                                <ChartSeries Name="Shopping" DataSource="@BarChartData" XName="XAxis" YName="YAxis3" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#91BD34"></ChartSeries>
                                <ChartSeries Name="Transport" DataSource="@BarChartData" XName="XAxis" YName="YAxis4" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#FFB900"></ChartSeries>
                            </ChartSeriesCollection>
                            <ChartLegendSettings Visible="false" />
                        </SfChart>
                    </div>
                    <div class="w-full md:w-2/5 lg:w-5/12">
                        <SfAccumulationChart Width="100%" Height="300px" ID="container" EnableBorderOnMouseMove="false" Theme="@(CurrentTheme == "tailwind-dark" ? Theme.Tailwind3Dark : Theme.Tailwind3)">
                            <AccumulationChartSeriesCollection>
                                <AccumulationChartSeries DataSource="@PieChartData" Palettes="@(new[] { "#03B4B4", "#78B008", "#F39C12", "#0D72DE" })" XName="XAxis" YName="YAxis" Name="XAxis" InnerRadius="65%" LegendShape="LegendShape.Rectangle">
                                    <AccumulationDataLabelSettings Name="DataLabelMappingName" Visible="true" Position="AccumulationLabelPosition.Outside">
                                    </AccumulationDataLabelSettings>
                                    <AccumulationChartAnnotations>
                                        <AccumulationChartAnnotation Region="Regions.Series" X="50%" Y="50%">
                                            <ContentTemplate>
                                                <div class="dark:text-white" style="font-size:14px;font-weight:600" id="annotation">
                                                    Today
                                                </div>
                                            </ContentTemplate>
                                        </AccumulationChartAnnotation>
                                    </AccumulationChartAnnotations>
                                </AccumulationChartSeries>
                            </AccumulationChartSeriesCollection>
                            <AccumulationChartLegendSettings Position="Syncfusion.Blazor.Charts.LegendPosition.Bottom" Alignment="Syncfusion.Blazor.Charts.Alignment.Center"></AccumulationChartLegendSettings>
                        </SfAccumulationChart>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
      <section class="bg-body">
        <div class="vh-100 d-flex justify-content-center p-3 p-sm-4" style="min-height: 674px;">
