                                <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                                <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                                <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                                <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                                <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                            </ChartPrimaryYAxis>
                            <ChartSeriesCollection>
                                <ChartSeries Name="Food & Drink" DataSource="@BarChartData" XName="XAxis" YName="YAxis1" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#3A95FF"></ChartSeries>
                                <ChartSeries Name="Grocery" DataSource="@BarChartData" XName="XAxis" YName="YAxis2" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#EF6400"></ChartSeries>
                                <ChartSeries Name="Shopping" DataSource="@BarChartData" XName="XAxis" YName="YAxis3" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#35FF23"></ChartSeries>
                                <ChartSeries Name="Transport" DataSource="@BarChartData" XName="XAxis" YName="YAxis4" Type="Syncfusion.Blazor.Charts.ChartSeriesType.StackingColumn" LegendShape="LegendShape.Rectangle" Fill="#FDDA02"></ChartSeries>
                            </ChartSeriesCollection>
                            <ChartLegendSettings Visible="false" />
                        </SfChart>
                    </div>
                    <div class="col-12 col-sm-5">
                        <SfAccumulationChart Width="100%" Height="300px" ID="container" EnableBorderOnMouseMove="false" Theme="@(CurrentTheme == "bootstrap5.3-dark" ? Theme.Bootstrap5Dark : Theme.Bootstrap5)">
                            <AccumulationChartSeriesCollection>
                                <AccumulationChartSeries DataSource="@PieChartData" Palettes="@(new[] { "#3A95FF", "#EF6400", "#35FF23", "#FDDA02" })" XName="XAxis" YName="YAxis" Name="XAxis" InnerRadius="65%" LegendShape="LegendShape.Rectangle">
                                    <AccumulationDataLabelSettings Name="DataLabelMappingName" Visible="true" Position="AccumulationLabelPosition.Outside">
                                    </AccumulationDataLabelSettings>
                                    <AccumulationChartAnnotations>
                                        <AccumulationChartAnnotation Region="Regions.Series" X="50%" Y="50%">
                                            <ContentTemplate>
                                                <div style="font-size:14px;font-weight:600" id="annotation">
                                                    Today
                                                </div>
                                            </ContentTemplate>
                                        </AccumulationChartAnnotation>
                                    </AccumulationChartAnnotations>
                                </AccumulationChartSeries>
                            </AccumulationChartSeriesCollection>
                            <AccumulationChartLegendSettings Position="Syncfusion.Blazor.Charts.LegendPosition.Bottom" Alignment="Syncfusion.Blazor.Charts.Alignment.Center"></AccumulationChartLegendSettings>
                        </SfAccumulationChart>
                    </div>
                </div>
            </div>
        </div>
    </section>    
}
