@page "/blocks/bar-chart-9"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
		<div class="h-screen flex justify-center p-4 sm:p-6">
			<div class="w-full" style="max-width: 530px">
				<div class="flex flex-col sm:flex-row gap-4 justify-between sm:items-start">
					<div class="flex justify-between items-start">
						<div>
							<h1 class="text-base font-medium text-gray-900 dark:text-white mb-1">Ticket Activity Overview</h1>
							<p class="text-xs text-gray-500 dark:text-gray-400">Location: <span class="font-medium">Paris, France</span></p>
						</div>
						<SfButton CssClass="e-outline block sm:hidden" IconCss="e-icons e-description" Type="button" aria-label="view report" role="button"></SfButton>
					</div>
					<div class="flex gap-4">
						<SfDropDownButton @ref="DropDownButton" CssClass="e-outline" Content="2024" Type="button" aria-label="choose a year" role="button">
							<DropDownButtonEvents Opened="@(args => IsDropdownOpen = true)" Closed="@(args => IsDropdownOpen = false)"></DropDownButtonEvents>
							<DropDownMenuItems>
								<DropDownMenuItem Text="2024"></DropDownMenuItem>
								<DropDownMenuItem Text="2023"></DropDownMenuItem>
								<DropDownMenuItem Text="2022"></DropDownMenuItem>
								<DropDownMenuItem Text="2021"></DropDownMenuItem>
								<DropDownMenuItem Text="2020"></DropDownMenuItem>
							</DropDownMenuItems>
						</SfDropDownButton>
						<SfButton CssClass="e-outline hidden sm:block" Content="View Report" Type="button" aria-label="view report" role="button"></SfButton>
					</div>
				</div>
				<div class="mt-6">
					<SfChart3D Width="100%" Height="300px" TiltAngle="10" Depth="100" WallColor="transparent" Theme="@(CurrentTheme == "tailwind-dark" ? Theme.Tailwind3Dark : Theme.Tailwind3)">
						<Chart3DPrimaryXAxis ValueType="Syncfusion.Blazor.Chart3D.ValueType.Category">
							<Chart3DAxisLabelStyle FontWeight="500"></Chart3DAxisLabelStyle>
							<Chart3DMajorGridLines Width="0"></Chart3DMajorGridLines>
						</Chart3DPrimaryXAxis>
						<Chart3DPrimaryYAxis Minimum="30" Maximum="130" Interval="20">
							<Chart3DAxisLabelStyle FontWeight="500"></Chart3DAxisLabelStyle>
							<Chart3DMinorGridLines Width="1"></Chart3DMinorGridLines>
						</Chart3DPrimaryYAxis>
						<Chart3DSeriesCollection>
							<Chart3DSeries DataSource="@BarChartData" XName="XAxis" YName="YAxis" ColumnWidth="0.75" ColumnSpacing="0.3" Type="Chart3DSeriesType.Column" ColumnFacet="Chart3DShapeType.Cylinder" Fill="#01A8B5"></Chart3DSeries>
						</Chart3DSeriesCollection>
						<Chart3DTooltipSettings Enable="true" EnableMarker="false"></Chart3DTooltipSettings>
					</SfChart3D>
				</div>
			</div>
		</div>
	</section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
		<div class="vh-100 d-flex justify-content-center p-3 p-sm-4">
			<div class="w-100" style="max-width: 530px">
				<div class="d-flex flex-column flex-sm-row gap-3 justify-content-between align-items-start">
					<div class="d-flex justify-content-between align-items-start w-100">
						<div>
							<h1 class="h6 fw-medium text-body mb-1">Ticket Activity Overview</h1>
							<p class="text-body-secondary small mb-0">Location: <span class="fw-semibold">Paris, France</span></p>
						</div>
						<SfButton CssClass="d-block d-sm-none e-outline" IconCss="e-icons e-description" Type="button" aria-label="view report" role="button"></SfButton>
					</div>
					<div class="d-flex align-items-start gap-2 w-50">
						<SfDropDownButton @ref="DropDownButton" CssClass="e-outline" Content="2024" Type="button" aria-label="choose a year" role="button">
							<DropDownButtonEvents Opened="@(args => IsDropdownOpen = true)" Closed="@(args => IsDropdownOpen = false)"></DropDownButtonEvents>
							<DropDownMenuItems>
								<DropDownMenuItem Text="2024"></DropDownMenuItem>
								<DropDownMenuItem Text="2023"></DropDownMenuItem>
								<DropDownMenuItem Text="2022"></DropDownMenuItem>
								<DropDownMenuItem Text="2021"></DropDownMenuItem>
								<DropDownMenuItem Text="2020"></DropDownMenuItem>
							</DropDownMenuItems>
						</SfDropDownButton>
						<SfButton CssClass="e-outline d-sm-block d-none" Content="View Report" Type="button" aria-label="view report" role="button"></SfButton>
					</div>
				</div>
				<div class="mt-4">
					<SfChart3D Width="100%" Height="300px" TiltAngle="10" Depth="100"  WallColor="transparent" Theme="@(CurrentTheme == "bootstrap5.3-dark" ? Theme.Bootstrap5Dark : Theme.Bootstrap5)">
						<Chart3DPrimaryXAxis ValueType="Syncfusion.Blazor.Chart3D.ValueType.Category">
							<Chart3DAxisLabelStyle FontWeight="500"></Chart3DAxisLabelStyle>
							<Chart3DMajorGridLines Width="0"></Chart3DMajorGridLines>
						</Chart3DPrimaryXAxis>
						<Chart3DPrimaryYAxis Minimum="30" Maximum="130" Interval="20">
							<Chart3DAxisLabelStyle FontWeight="500"></Chart3DAxisLabelStyle>
							<Chart3DMinorGridLines Width="1"></Chart3DMinorGridLines>
						</Chart3DPrimaryYAxis>
						<Chart3DSeriesCollection>
							<Chart3DSeries DataSource="@BarChartData" XName="XAxis" YName="YAxis" ColumnWidth="0.75" ColumnSpacing="0.3" Type="Chart3DSeriesType.Column" ColumnFacet="Chart3DShapeType.Cylinder" Fill="#01A8B5"></Chart3DSeries>
						</Chart3DSeriesCollection>
						<Chart3DTooltipSettings Enable="true" EnableMarker="false"></Chart3DTooltipSettings>
					</SfChart3D>
				</div>
			</div>
		</div>
	</section>
}
