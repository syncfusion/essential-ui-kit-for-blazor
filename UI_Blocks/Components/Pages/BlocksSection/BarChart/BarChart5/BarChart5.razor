                            <ChartSeries DataSource="@BarChartData" XName="XAxis" YName="YAxis2" YAxisName="YAxisRight" Type="ChartSeriesType.Line" Width="2" Fill="@(CurrentTheme == "bootstrap5.3-dark" ? "#FFFFFF" : "#1F2937")" Name="Total Sales Var%" LegendShape="Syncfusion.Blazor.Charts.LegendShape.Circle"></ChartSeries>
                        </ChartSeriesCollection>
                        <ChartLegendSettings Visible="true" Position="Syncfusion.Blazor.Charts.LegendPosition.Top" Alignment="Syncfusion.Blazor.Charts.Alignment.Near" Height="53"></ChartLegendSettings>
                    </SfChart>
                </div>
            </div>
        </div>
    </section>
}