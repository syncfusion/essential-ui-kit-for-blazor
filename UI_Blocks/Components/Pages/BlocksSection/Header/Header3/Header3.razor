@page "/blocks/header-3"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-800">
        <div class="pt-4 lg:!pt-6" style="min-height: 36rem;">
            <div class="flex justify-between pb-3">
                <div class="flex items-center">
                    <h1 class="text-lg font-semibold text-gray-900 dark:text-white ms-4 sm:ms-6">Employees</h1>
                </div>
                <div class="flex lg:hidden gap-4">
                    <SfButton IconCss="e-icons e-search" Type="button" aria-label="search" role="button"></SfButton>
                    <SfButton CssClass="me-4 sm:me-6" IconCss="e-icons e-filter" Type="button" aria-label="filter" role="button"></SfButton>
                </div>
            </div>
            <div class="flex items-center justify-between px-4 sm:px-6 relative">
                <div class="w-full">
                    <SfTab HeightAdjustMode="Auto" Width="100%" OverFlowMode="@OverflowMode">
                        <TabEvents Selected="OnTabSelected"></TabEvents>
                        <TabItems>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="space-x-2 flex items-center">
                                        <span>All</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(0)}")">450</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="space-x-2 flex items-center">
                                        <span>Full-time</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(1)}")">380</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="space-x-2 flex items-center">
                                        <span>Part-time</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(2)}")">50</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="space-x-2 flex items-center">
                                        <span>Contract</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(3)}")">20</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                        </TabItems>
                    </SfTab>
                </div>
                <div class="hidden lg:flex justify-between items-center">
                    <div class="flex gap-3 pb-3 me-6 absolute top-0 end-0" style="width: 300px;">
                        <div class="e-input-group">
                            <input class="e-input" type="text" placeholder="Search..." aria-label="search" role="textbox" />
                            <span class="e-input-group-icon e-icons e-search border-l-0"></span>
                        </div>
                        <SfButton IconCss="e-icons e-filter" Type="button" Content="Filter" aria-label="filter" role="button"></SfButton>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div class="pt-3 pt-sm-4" style="min-height: 36rem;">
            <div class="d-flex justify-content-between pb-3">
                <div class="d-flex align-items-center">
                    <h1 class="fs-6 fw-bold text-body ms-3 ms-sm-4 mb-0">Employees</h1>
                </div>
                <div class="d-flex d-lg-none gap-3">
                    <SfButton CssClass="e-outline" IconCss="e-icons e-search" Type="button" aria-label="search" role="button"></SfButton>
                    <SfButton CssClass="e-outline me-3 me-sm-4" IconCss="e-icons e-filter" Type="button" aria-label="filter" role="button"></SfButton>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-between px-3 px-sm-4 position-relative">
                <div class="w-100">
                    <SfTab HeightAdjustMode="Auto" Width="100%" OverFlowMode="@OverflowMode">
                        <TabEvents Selected="OnTabSelected"></TabEvents>
                        <TabItems>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="d-flex align-items-center gap-2">
                                        <span>All</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(0)}")">450</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="d-flex align-items-center gap-2">
                                        <span>Full-time</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(1)}")">380</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="d-flex align-items-center gap-2">
                                        <span>Part-time</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(2)}")">50</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                            <TabItem>
                                <HeaderTemplate>
                                    <div class="d-flex align-items-center gap-2">
                                        <span>Contract</span>
                                        <span class="@($"e-badge e-badge-pill px-2 {GetBadgeClass(3)}")">20</span>
                                    </div>
                                </HeaderTemplate>
                            </TabItem>
                        </TabItems>
                    </SfTab>
                </div>
                <div class="d-none d-lg-flex justify-content-between align-items-center">
                    <div class="d-flex gap-3 pt-3 me-4 position-absolute top-0 end-0 translate-middle-y" style="width: 300px;">
                        <div class="e-input-group">
                            <input class="e-input" type="text" placeholder="Search..." aria-label="search" role="textbox" />
                            <span class="e-input-group-icon e-icons e-search border-start-0"></span>
                        </div>
                        <SfButton CssClass="e-outline" IconCss="e-icons e-filter" Type="button" Content="Filter" aria-label="filter" role="button"></SfButton>
                    </div>
                </div>
            </div>
        </div>
    </section>
}