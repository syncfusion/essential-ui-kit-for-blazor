@page "/blocks/forgot-password-2"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-950">
        <div class="flex flex-col lg:flex-row md:min-h-screen">
            <div class="w-full lg:w-7/12 p-0">
                <div class="w-full h-60 lg:h-full" style="background-image: url('assets/images/authentication/split-screen/split-screen.png'); background-size: cover; background-repeat: no-repeat; background-position: center;"></div>
            </div>
            <div class="w-full lg:w-5/12 p-0">
                <div class="bg-gray-50 dark:bg-gray-950">
                    <div class="flex justify-center">
                        <div class="w-full max-w-md rounded-lg p-4 p-md-6 py-12">
                            <div class="flex justify-center mb-6">
                                <div class="flex items-center justify-center">
                                    <img class="mr-2" src="assets/images/common/brand-logos/svg/vector.svg" alt="company logo" />
                                    <h2 class="text-center text-xl font-semibold text-gray-900 dark:text-white">Company Name</h2>
                                </div>
                            </div>
                            <h2 class="text-2xl font-semibold text-center mb-2 text-gray-900 dark:text-white">Forgot password?</h2>
                            <p class="text-md text-center text-gray-700 dark:text-gray-300">Enter your email address and we’ll send a link to reset your password</p>
                            <form action="#" class="mt-6 mb-6" onsubmit="event.preventDefault();">
                                <div class="mb-4">
                                    <label class="block text-sm mb-1 font-medium text-gray-700 dark:text-gray-300">Email</label>
                                    <SfTextBox CssClass="e-bigger" Type="InputType.Email" Placeholder="Email" FloatLabelType="FloatLabelType.Never" aria-label="enter your email address" role="textbox"></SfTextBox>
                                </div>
                            </form>
                            <div class="e-bigger">
                                <SfButton CssClass="w-full e-primary e-btn" type="submit" aria-label="send reset link" role="button">Send Reset Link</SfButton>
                            </div>
                            <span class="flex items-center justify-center gap-2 mt-6">
                                <p class="text-center text-gray-900 dark:text-white">Return to</p>
                                <a href="javascript:void(0);" class="text-primary-600 dark:text-primary-400 font-medium text-base p-0" aria-label="sign in" role="link">Sign in</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section>
        <div class="d-flex flex-column flex-lg-row min-vh-100">
            <div class="col-12 col-lg-7 p-0">
                <div class="w-100 h-100" style="background-image: url('assets/images/authentication/split-screen/split-screen.png'); background-size: cover; background-repeat: no-repeat; background-position: center; min-height: 240px;"></div>
            </div>
            <div class="col-12 col-lg-5 p-0">
                <div class="d-flex justify-content-center bg-body">
                    <div class="max-w-md bg-body rounded-lg p-4 py-5 w-100" style="max-width: 450px;">
                        <div class="d-flex justify-content-center mb-4">
                            <div class="d-flex align-items-center">
                                <img class="me-2" src="assets/images/common/brand-logos/svg/vector.svg" alt="company logo" />
                                <h2 class="text-center fs-5 fw-bold mb-0 text-body">Company Name</h2>
                            </div>
                        </div>
                        <h2 class="text-center fs-4 fw-bold mb-2 text-body">Forgot password?</h2>
                        <p class="text-center text-light-emphasis m-0">Enter your email address and we’ll send a link to reset your password</p>
                        <form action="#" class="mt-4 mb-4" onsubmit="event.preventDefault();">
                            <div class="mb-3">
                                <label class="mb-1 fw-medium text-dark-emphasis small">Email</label>
                                <SfTextBox CssClass="e-bigger" Type="InputType.Email" Placeholder="Email" FloatLabelType="FloatLabelType.Never" aria-label="enter your email address" role="textbox"></SfTextBox>
                            </div>
                        </form>
                        <div class="e-bigger">
                            <SfButton CssClass="e-btn e-block e-primary" type="submit" aria-label="send reset link" role="button">Send Reset Link</SfButton>
                        </div>
                        <div class="d-flex align-items-center justify-content-center gap-1 mt-4">
                            <p class="text-center text-body mb-0">Return to</p>
                            <a href="javascript:void(0);" class="text-primary p-0 text-decoration-none fs-6 fw-medium" aria-label="sign in" role="link">Sign in</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
