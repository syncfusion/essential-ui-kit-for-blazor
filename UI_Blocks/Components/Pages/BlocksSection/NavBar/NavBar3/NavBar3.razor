@page "/blocks/navbar-3"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
	<section class="bg-gray-50 dark:bg-gray-950">
		<div>
			<div class="border border-r-0 border-l-0 border-gray-200 dark:border-gray-600 bg-gray-100 dark:bg-gray-700">
				<div class="flex items-center justify-between ms-6 me-2 lg:me-3 py-1">
					<div class="flex items-center">
						<img class="mr-3 h-7" src="assets/images/common/brand-logos/svg/vector.svg" alt="company logo" />
						<span class="text-lg font-semibold text-gray-900 dark:text-white">Company Name</span>
					</div>
					<div class="flex items-center">
						<SfButton CssClass="sf-icon-notification-bell-02 leading-3 text-base mr-1 sm:mr-2 e-flat" Type="button" aria-label="notification" role="button"></SfButton>
						<div class="border border-r border-gray-200 dark:border-gray-600 h-7 hidden sm:block mr-2"></div>
						<SfButton CssClass="e-icons e-grid-view hidden sm:block e-flat" Type="button" aria-label="grid view" role="button"></SfButton>
						<div class="border border-r border-gray-200 dark:border-gray-600 h-7 hidden sm:block mx-2"></div>
						<SfButton CssClass="e-icons e-people hidden sm:block e-flat" Type="button" aria-label="group" role="button"></SfButton>
						<div class="border border-r border-gray-200 dark:border-gray-600 h-7 hidden lg:block mx-2"></div>
						<span class="hidden lg:block py-2">
							<SfDropDownButton @ref="StateDropdown" id="stateDropdown" CssClass="e-flat" Content="N.Virginia" Type="button" aria-label="choose a state" role="button">
								<DropDownButtonEvents Opened="OnStateDropdownOpened" Closed="OnStateDropdownClosed"></DropDownButtonEvents>
								<DropDownMenuItems>
									<DropDownMenuItem Text="New York" IconCss="e-icons e-folder"></DropDownMenuItem>
									<DropDownMenuItem Text="N. Virginia" IconCss="e-icons e-folder"></DropDownMenuItem>
									<DropDownMenuItem Text="Washington DC" IconCss="e-icons e-folder"></DropDownMenuItem>
								</DropDownMenuItems>
							</SfDropDownButton>
						</span>
						<div class="border border-r border-gray-200 dark:border-gray-600 h-7 mx-2 hidden lg:block"></div>
						<span class="hidden lg:block py-2">
							<SfDropDownButton @ref="AddressDropdown" id="addressDropdown" CssClass="e-flat" Content="@("Bonnie Green @ 1234-567-890")" Type="button" aria-label="choose a address" role="button">
								<DropDownButtonEvents Opened="OnAddressDropdownOpened" Closed="OnAddressDropdownClosed"></DropDownButtonEvents>
								<DropDownMenuItems>
									<DropDownMenuItem Text="@("Michael Gough @ 1234-567-935")"></DropDownMenuItem>
									<DropDownMenuItem Text="@("Roberta Cases @ 1234-567-292")"></DropDownMenuItem>
								</DropDownMenuItems>
							</SfDropDownButton>
						</span>
						<div class="border border-r border-gray-200 dark:border-gray-600 h-7 block lg:hidden ms-2"></div>
						<span id="menu" class="block lg:hidden">
							<SfMenu TValue="MenuItem" HamburgerMode="true" ShowItemOnClick="true" Title="">
								<MenuItems>
									<MenuItem Text="Home"></MenuItem>
									<MenuItem Text="Demo"></MenuItem>
									<MenuItem Text="Features"></MenuItem>
									<MenuItem Text="Shop"></MenuItem>
									<MenuItem Text="Pages"></MenuItem>
									<MenuItem Text="Blogs"></MenuItem>
								</MenuItems>
							</SfMenu>
						</span>
					</div>
				</div>
			</div>
			<div class="hidden lg:flex px-4 py-1 bg-gray-100 dark:bg-gray-700 border border-t-0 border-r-0 border-l-0 border-gray-200 dark:border-gray-600">
				<SfMenu TValue="MenuItem">
					<MenuItems>
						<MenuItem Text="Home"></MenuItem>
						<MenuItem Text="Demo"></MenuItem>
						<MenuItem Text="Features"></MenuItem>
						<MenuItem Text="Shop"></MenuItem>
						<MenuItem Text="Pages"></MenuItem>
						<MenuItem Text="Blogs"></MenuItem>
					</MenuItems>
				</SfMenu>
			</div>
		</div>
	</section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
	<section>
		<div class="border border-start-0 border-end-0 border-light-subtle bg-body-tertiary">
			<div class="d-flex align-items-center justify-content-between py-1 ps-4 pe-2 pe-lg-4">
				<div class="d-flex align-items-center">
					<img class="me-2" src="assets/images/common/brand-logos/svg/vector.svg" alt="company logo" />
					<h5 class="fw-bold text-body fs-5 mb-0">Company Name</h5>
				</div>
				<div class="d-flex align-items-center">
					<SfButton CssClass="sf-icon-notification-bell-01 fs-6 me-0 me-sm-3 e-flat" Type="button" aria-label="notification" role="button"></SfButton>
					<div class="border-end border-secondary-subtle d-none d-sm-block me-3" style="height: 24px;"></div>
					<SfButton CssClass="e-icons e-grid-view d-none d-sm-block e-medium e-flat" Type="button" aria-label="grid view" role="button"></SfButton>
					<div class="border-end border-secondary-subtle d-none d-md-block mx-3" style="height: 24px;"></div>
					<SfButton CssClass="e-icons e-people d-none d-md-block e-medium e-flat" Type="button" aria-label="group" role="button"></SfButton>
					<div class="border-end border-secondary-subtle d-none d-lg-block mx-3" style="height: 24px;"></div>
					<span class="d-none d-lg-block py-2">
						<SfDropDownButton @ref="StateDropdown" id="stateDropdown" CssClass="e-flat" Content="N.Virginia" Type="button" aria-label="choose a state" role="button">
							<DropDownButtonEvents Opened="OnStateDropdownOpened" Closed="OnStateDropdownClosed"></DropDownButtonEvents>
							<DropDownMenuItems>
								<DropDownMenuItem Text="New York" IconCss="e-icons e-folder"></DropDownMenuItem>
								<DropDownMenuItem Text="N. Virginia" IconCss="e-icons e-folder"></DropDownMenuItem>
								<DropDownMenuItem Text="Washington DC" IconCss="e-icons e-folder"></DropDownMenuItem>
							</DropDownMenuItems>
						</SfDropDownButton>
					</span>
					<div class="border-end border-secondary-subtle ms-2 ms-sm-3 me-0 me-sm-1 " style="height: 24px;"></div>
					<span class="d-none d-lg-block ms-2">
						<SfDropDownButton @ref="AddressDropdown" id="addressDropdown" CssClass="e-flat" Content="@("Bonnie Green @ 1234-567-890")" Type="button" aria-label="choose a address" role="button">
							<DropDownButtonEvents Opened="OnAddressDropdownOpened" Closed="OnAddressDropdownClosed"></DropDownButtonEvents>
							<DropDownMenuItems>
								<DropDownMenuItem Text="@("Michael Gough @ 1234-567-935")"></DropDownMenuItem>
								<DropDownMenuItem Text="@("Roberta Cases @ 1234-567-292")"></DropDownMenuItem>
							</DropDownMenuItems>
						</SfDropDownButton>
					</span>
					<span id="menu" class="block d-lg-none">
						<SfMenu CssClass="bg-body-tertiary" TValue="MenuItem" HamburgerMode="true" ShowItemOnClick="true" Title="">
							<MenuItems>
								<MenuItem Text="Home"></MenuItem>
								<MenuItem Text="Demo"></MenuItem>
								<MenuItem Text="Features"></MenuItem>
								<MenuItem Text="Shop"></MenuItem>
								<MenuItem Text="Pages"></MenuItem>
								<MenuItem Text="Blogs"></MenuItem>
							</MenuItems>
						</SfMenu>
					</span>
				</div>
			</div>
		</div>
		<div class="d-none d-lg-flex px-3 bg-body-tertiary border border-light-subtle border-top-0 border-start-0 border-end-0" style="height: 40px; display: flex; align-items: center;">
			<SfMenu TValue="MenuItem">
				<MenuItems>
					<MenuItem Text="Home"></MenuItem>
					<MenuItem Text="Demo"></MenuItem>
					<MenuItem Text="Features"></MenuItem>
					<MenuItem Text="Shop"></MenuItem>
					<MenuItem Text="Pages"></MenuItem>
					<MenuItem Text="Blogs"></MenuItem>
				</MenuItems>
			</SfMenu>
		</div>
	</section>
}

