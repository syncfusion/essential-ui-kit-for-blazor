@page "/blocks/search-2"
@inherits UI_Blocks.Components.Pages.MainSection.Demo
@inject IJSRuntime JSRuntime

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900 h-full">
        <div class="w-full pt-5 pb-4" style="height: 600px;">
            <div id="SearchContainerParent" class="mx-auto" style="max-width: 400px">
                @if (Data != null)
                {
                    <SfAutoComplete TValue="string" TItem="SearchItem" @ref="Search" DataSource="@Data" Placeholder="Search"
                                    PopupHeight="530px" CssClass="e-bigger" role="combobox">
                        <AutoCompleteEvents TValue="string" TItem="SearchItem" Focus="@FocusHandlerAsync" Created="@FocusHandlerAsync"></AutoCompleteEvents>
                        <AutoCompleteFieldSettings Value="Text"></AutoCompleteFieldSettings>
                        <AutoCompleteTemplates TItem="SearchItem">
                            <ItemTemplate Context="context">
                                <div class="text-sm font-medium text-wrap flex justify-between">
                                    <div class="text-gray-900 dark:text-white indent-0 px-4 py-2">@context.Text</div>
                                    <span class="text-gray-600 dark:text-gray-300 flex items-center">@context.Status</span>
                                </div>
                            </ItemTemplate>
                            <NoRecordsTemplate>
                                <div class="text-center py-6 w-2/3 m-auto">
                                    <div class="mb-3">
                                        <span class="border border-gray-200 p-2 rounded text-xl e-icons e-search dark:border-gray-600 dark:text-gray-100"></span>
                                    </div>
                                    <div>
                                        <div class="mb-4">
                                            <div class="mb-1 text-lg text-gray-900 font-medium dark:text-white">No results found</div>
                                            <div class="text-sm text-gray-600 font-medium dark:text-gray-300">"Webflow" did not match any projects or commands. Please try again.</div>
                                        </div>
                                        <div>
                                            <SfButton CssClass="e-btn e-outline px-4 text-gray-700 !text-base !dark:text-white" Content="Clear Search" Type="button" aria-label="clear search" role="nutton"></SfButton>
                                        </div>
                                    </div>
                                </div>
                            </NoRecordsTemplate>
                        </AutoCompleteTemplates>
                    </SfAutoComplete>
                }
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body h-100">
        <div class="container-fluid pt-4 pb-3" style="height: 600px;">
            <div id="SearchContainerParent" class="mx-auto" style="max-width: 400px">
                @if (Data != null)
                {
                    <SfAutoComplete TValue="string" TItem="SearchItem" @ref="Search" DataSource="@Data" Placeholder="Search" PopupHeight="530px" CssClass="e-bigger" role="combobox">
                        <AutoCompleteEvents TValue="string" TItem="SearchItem" Focus="@FocusHandlerAsync" Created="@FocusHandlerAsync"></AutoCompleteEvents>
                        <AutoCompleteFieldSettings Value="Text"></AutoCompleteFieldSettings>
                        <AutoCompleteTemplates TItem="SearchItem">
                            <ItemTemplate Context="context">
                                <div class="d-flex justify-content-between text-wrap fs-6 lh-base fw-medium px-3 pt-2 pb-2" style="text-indent: 0">
                                    <div class="text-body lh-base">@context.Text</div>
                                    <span class="text-body-secondary lh-base">@context.Status</span>
                                </div>
                            </ItemTemplate>
                            <NoRecordsTemplate>
                                <div class="text-center py-5 w-75 m-auto">
                                    <div class="mb-3">
                                        <span class="border border-light-subtle p-2 rounded text-xl e-icons e-search"></span>
                                    </div>
                                    <div>
                                        <div class="mb-3">
                                            <div class="mb-1 fw-medium lh-lg h6 text-body">No results found</div>
                                            <div class="fw-medium text-body-tertiary">"Webflow" did not match any projects or commands. Please try again.</div>
                                        </div>
                                        <div>
                                            <SfButton CssClass="e-outline px-4 fw-medium" Content="Clear Search" Type="button" aria-label="clear search" role="button"></SfButton>
                                        </div>
                                    </div>
                                </div>
                            </NoRecordsTemplate>
                        </AutoCompleteTemplates>
                    </SfAutoComplete>
                }
            </div>
        </div>
    </section>
}
