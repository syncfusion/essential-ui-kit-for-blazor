                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryXAxis>
                        <ChartPrimaryYAxis LabelFormat="{value}" RangePadding="Syncfusion.Blazor.Charts.ChartRangePadding.None" Minimum="0" Maximum="500" Interval="100" EdgeLabelPlacement="Syncfusion.Blazor.Charts.EdgeLabelPlacement.Shift">
                            <ChartAxisLabelStyle FontWeight="500"></ChartAxisLabelStyle>
                            <ChartAxisMajorGridLines Width="1"></ChartAxisMajorGridLines>
                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
                            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                        </ChartPrimaryYAxis>
                        <ChartSeriesCollection>
                            <ChartSeries DataSource="@AreaChartData" XName="Month" YName="Teens" Type="ChartSeriesType.SplineArea" Name="12 - 19" Fill="#006EEF" Opacity="0.4" Width="2">
                                <ChartSeriesBorder Width="0"></ChartSeriesBorder>
                            </ChartSeries>
                            <ChartSeries DataSource="@AreaChartData" XName="Month" YName="YoungAdults" Type="ChartSeriesType.SplineArea" Name="20 - 39" Fill="#EF00AC" Opacity="0.4" Width="2">
                                <ChartSeriesBorder Width="0"></ChartSeriesBorder>
                            </ChartSeries>
                            <ChartSeries DataSource="@AreaChartData" XName="Month" YName="Adults" Type="ChartSeriesType.SplineArea" Name="40>" Fill="#00EFA7" Opacity="0.4" Width="2">
