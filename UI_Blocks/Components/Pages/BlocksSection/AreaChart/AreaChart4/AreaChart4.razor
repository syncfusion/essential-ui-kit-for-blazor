                        <ChartLegendSettings Visible="false"></ChartLegendSettings>
                        <ChartTooltipSettings Enable="true" Header="" EnableMarker="false" ShowNearestTooltip="true" Format="<b>${point.y} ↑</b>"></ChartTooltipSettings>
