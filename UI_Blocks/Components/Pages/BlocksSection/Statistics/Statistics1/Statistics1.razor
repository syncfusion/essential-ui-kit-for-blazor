@page "/blocks/statistics-1"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-900">
        <div class="px-4 sm:px-6 xl:px-11 py-12">
            <div class="grid sm:grid-cols-2 gap-6 lg:gap-4 xl:grid-cols-4">
                @foreach (var data in MetricsData)
                {
                    <div class="e-card pt-6 e-bigger rounded-lg shadow-none">
                        <div class="e-card-stacked">
                            <div class="e-card-header !py-0 !justify-between items-center flex-row">
                                <h4 class="text-base font-medium text-gray-700 dark:text-gray-200">@data.MetricName</h4>
                                <p class="text-xl font-semibold text-gray-900 dark:text-white">@data.CurrentValue</p>
                            </div>
                            <div class="e-card-content !pb-6 mt-2">
                                <span class="font-medium @(data.CurrentPercentage > 0 ? "text-green-700 dark:text-green-500" : "text-red-600 dark:text-red-400")">@(data.CurrentPercentage > 0 ? "+" : "")@data.CurrentPercentage&#37;</span>
                                <span class="ml-2 text-gray-700 dark:text-gray-200">vs previous 27 days</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body-tertiary">
        <div class="px-3 px-sm-4 px-xl-5 py-5">
            <div class="row g-4 g-lg-3">
                @foreach (var data in MetricsData)
                {
                    <div class="col-12 col-sm-6 col-xl-3">
                        <div class="e-card e-bigger rounded-3 pt-4">
                            <div class="e-card-stacked">
                                <div class="e-card-header py-0 px-4 flex-row justify-content-between align-items-center">
                                    <h4 class="fs-6 fw-medium text-body-secondary mb-0 lh-base">@data.MetricName</h4>
                                    <p class="text-body fs-5 fw-bold mb-0 lh-sm">@data.CurrentValue</p>
                                </div>
                                <div class="e-card-content px-4 pb-4 pt-2">
                                    <span class="fw-medium @(data.CurrentPercentage > 0 ? "text-success" : "text-danger")">@(data.CurrentPercentage > 0 ? "+" : "")@data.CurrentPercentage&#37;</span>
                                    <span class="ms-2 text-body-secondary">vs previous 27 days</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
