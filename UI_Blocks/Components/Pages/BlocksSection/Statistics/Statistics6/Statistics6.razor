@page "/blocks/statistics-6"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-900">
        <div class="px-4 sm:px-6 xl:px-11 py-12">
            <div class="grid sm:grid-cols-2 gap-6 lg:gap-4 xl:grid-cols-4">
                @foreach (var data in MetricsData)
                {
                    <div class="e-card rounded-lg">
                        <div class="e-card-stacked">
                            <div class="e-card-header !justify-between items-center !py-3 !px-6 bg-gray-50 dark:bg-gray-600 opacity-70">
                                <div class="e-card-header-title">
                                    <h3 class="text-base font-medium text-gray-700 dark:text-gray-200">@data.MetricName</h3>
                                </div>
                                <SfButton CssClass="e-flat e-medium e-icons e-more-horizontal-1" Type="button" aria-label="more options" role="button"></SfButton>
                            </div>
                            <div class="e-card-content !py-6 !px-6">
                                <p class="text-3xl !leading-10 font-semibold mb-4 xl:mb-6 text-gray-900 dark:text-white">@data.CurrentValue.ToString("N0")</p>
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-500 dark:text-gray-400">@data.PreviousValue.ToString("N0") last month</span>
                                    <span class="e-badge flex items-center w-fit @(data.Trend == "up" ? "e-badge-success" : "e-badge-danger")">
                                        <span class="e-icons mr-1 @(data.Trend == "up" ? "e-arrow-up" : "e-arrow-down")"></span>
                                        <span>@data.CurrentPercentage&#37;</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body-tertiary">
        <div class="px-3 px-sm-4 px-xl-5 py-5">
            <div class="row g-4 g-lg-3">
                @foreach (var data in MetricsData)
                {
                    <div class="col-12 col-sm-6 col-xl-3">
                        <div class="e-card rounded-3 e-bigger shadow">
                            <div class="e-card-stacked">
                                <div class="e-card-header d-flex justify-content-between align-items-center py-3 px-4 bg-body-tertiary">
                                    <div class="e-card-header-title">
                                        <h3 class="fs-6 fw-medium text-body text-opacity-50 mb-0 lh-base">@data.MetricName</h3>
                                    </div>
                                    <SfButton CssClass="e-flat e-medium e-icons e-more-horizontal-1" Type="button" aria-label="more options" role="button"></SfButton>
                                </div>
                                <div class="e-card-content p-4">
                                    <p class="fs-3 lh-sm fw-bold text-body">@data.CurrentValue.ToString("N0")</p>
                                    <div class="d-flex justify-content-between w-auto align-items-center">
                                        <span class="text-body text-opacity-50">@data.PreviousValue.ToString("N0") last month</span>
                                        <span class="e-badge d-flex flex-row align-items-center justify-content-start flex-grow-0 @(data.Trend == "up" ? "e-badge-success" : "e-badge-danger")" style="width: fit-content;">
                                            <span class="e-icons me-1 @(data.Trend == "up" ? "e-arrow-up" : "e-arrow-down")"></span>
                                            <span>@data.CurrentPercentage&#37;</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
