@page "/blocks/statistics-10"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-900">
        <div class="px-4 sm:px-6 xl:px-11 py-12">
            <div class="grid sm:grid-cols-2 gap-6 lg:gap-4 lg:grid-cols-4">
                @foreach (var data in MetricsData)
                {
                    <div class="e-card e-bigger rounded-lg shadow-none">
                        <div class="e-card-stacked">
                            <div class="e-card-header !flex-col !pb-2 !pt-5">
                                <span class="e-avatar e-avatar-circle shrink-0 mb-6 h-11 w-11 @(data.MetricAssets == "total-income.png" ? "bg-green-100 dark:bg-green-800" : (new[] { "total-profit.png", "total-revenue.png" }.Contains(data.MetricAssets) ? "bg-orange-100 dark:bg-orange-800" : (data.MetricAssets == "total-conversion.png" ? "bg-cyan-100 dark:bg-sky-800" : "")))">
                                    <img class="!h-6 !w-6" src="assets/images/stats/financial-performance/@data.MetricAssets" alt="financial logo" />
                                </span>
                                <div class="e-card-header-title">
                                    <h3 class="font-medium text-gray-700 dark:text-gray-200 text-sm">@data.MetricName</h3>
                                </div>
                            </div>
                            <div class="e-card-content !pb-5">
                                <div class="gap-1 flex items-center">
                                    <span class="text-2xl font-semibold text-gray-900 dark:text-white">@data.CurrentValue</span>
                                    <span class="flex items-center font-medium e-badge e-badge-pill @(data.Trend == "up" ? "e-badge-success" : "e-badge-danger")">
                                        <span class="mr-1 @(data.Trend == "up" ? "e-icons e-chevron-up-fill" : "e-icons e-chevron-down-fill")"></span>@data.CurrentPercentage&#37;
                                    </span>
                                </div>
                                <p class="text-sm text-gray-700 dark:text-gray-200 mt-2">Compared to last month</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body-tertiary">
        <div class="px-3 px-sm-4 px-xl-5 py-5">
            <div class="row g-4 g-lg-3">
                @foreach (var data in MetricsData)
                {
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="e-card rounded-3 e-bigger pt-4">
                            <div class="e-card-stacked">
                                <div class="e-card-header d-flex flex-column pb-2 px-4 pt-0">
                                    <span class="e-avatar e-avatar-circle flex-shrink-0 mb-4 d-flex align-items-center justify-content-center @(data.MetricAssets == "total-income.png" ? "bg-success-subtle" : (new[] { "total-profit.png", "total-revenue.png" }.Contains(data.MetricAssets) ? "bg-warning-subtle" : (data.MetricAssets == "total-conversion.png" ? "bg-info-subtle" : "")))" style="height: 44px; width: 44px;">
                                        <img src="assets/images/stats/financial-performance/@data.MetricAssets" alt="financial logo" style="height: 24px; width: 24px;" />
                                    </span>
                                    <div class="e-card-header-title">
                                        <h3 class="small fw-medium text-body-secondary mb-0 lh-base">@data.MetricName</h3>
                                    </div>
                                </div>
                                <div class="e-card-content pb-4 px-4 pt-0">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="fs-4 lh-sm fw-bold text-body">@data.CurrentValue</span>
                                        <span class="d-flex align-items-center font-medium e-badge e-badge-pill @(data.Trend == "up" ? "e-badge-success" : "e-badge-danger")">
                                            <span class="me-1 @(data.Trend == "up" ? "e-icons e-chevron-up-fill" : "e-icons e-chevron-down-fill")"></span>@data.CurrentPercentage&#37;
                                        </span>
                                    </div>
                                    <p class="text-body text-opacity-50 mb-0 mt-2">Compared to last month</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
