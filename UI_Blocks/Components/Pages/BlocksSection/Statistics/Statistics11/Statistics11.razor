@page "/blocks/statistics-11"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-900">
        <div class="px-4 sm:px-6 xl:px-11 py-12">
            <div class="grid sm:grid-cols-2 gap-6 lg:gap-4 lg:grid-cols-4">
                @foreach (var data in MetricsData)
                {
                    <div class="e-card pt-6 e-bigger rounded-lg shadow-none">
                        <div class="e-card-stacked">
                            <div class="e-card-header !py-0 !justify-between items-center">
                                <h4 class="text-sm text-gray-700 dark:text-gray-200 font-medium">@data.MetricName</h4>
                                <span class="text-2xl !leading-none text-gray-500 dark:text-gray-300 @(data.MetricName == "Total Revenue" ? "sf-icon-dollar" : data.MetricName == "Total Orders" ? "sf-icon-cart" : data.MetricName == "Conversion Rate" ? "e-icons e-critical-path" : data.MetricName == "New Customers" ? "sf-icon-users" : "")"></span>
                            </div>
                            <div class="e-card-content !pb-6">
                                <p class="!leading-7 mt-2 text-xl font-semibold text-gray-900 dark:text-white">@data.CurrentValue</p>
                                <p class="mt-1 text-gray-700 dark:text-gray-200">@(data.CurrentPercentage > 0 ? "+" : "")@data.CurrentPercentage&#37; from last month</p>
                                <div>
                                    <SfChart Width="100%" Height="70" Background="transparent">
                                        <ChartMargin Left="0" Right="0" Top="0" Bottom="0"></ChartMargin>
                                        <ChartArea Border="@ChartAreaBorderSettings"></ChartArea>
                                        <ChartPrimaryXAxis Visible="false">
                                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                                            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                                        </ChartPrimaryXAxis>
                                        <ChartPrimaryYAxis Visible="false" Minimum="0" Maximum="4" Interval="1">
                                            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                                            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                                            <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                                        </ChartPrimaryYAxis>
                                        <ChartSeriesCollection>
                                            <ChartSeries DataSource="data.MetricPoints" XName="X" YName="Y" Type="ChartSeriesType.SplineArea" Opacity="0.2" Width="2" Fill="@(data.MetricName == "Total Revenue" ? "#91BD34" : data.MetricName == "Total Orders" ? "#01A8B5" : data.MetricName == "Conversion Rate" ? "#FFB900" : data.MetricName == "New Customers" ? "#91BD34" : "#000000")">
                                                <ChartSeriesBorder Color="@(data.MetricName == "Total Revenue" ? "#91BD34" : data.MetricName == "Total Orders" ? "#01A8B5" : data.MetricName == "Conversion Rate" ? "#FFB900" : data.MetricName == "New Customers" ? "#91BD34" : "#000000")" Width="2"></ChartSeriesBorder>
                                            </ChartSeries>
                                        </ChartSeriesCollection>
                                    </SfChart>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body-tertiary">
        <div class="px-3 px-sm-4 px-xl-5 py-5">
            <div class="row g-4 g-lg-3">
                @foreach (var data in MetricsData)
                {
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="e-card rounded-3 e-bigger">
                            <div class="e-card-stacked">
                                <div class="e-card-header justify-content-between align-items-center pt-4 px-4">
                                    <h4 class="small text-body-secondary fw-medium lh-base mb-0">@data.MetricName</h4>
                                    <span class="fs-4 text-secondary @(data.MetricName == "Total Revenue" ? "sf-icon-dollar" : data.MetricName == "Total Orders" ? "sf-icon-cart" : data.MetricName == "Conversion Rate" ? "e-icons e-critical-path" : data.MetricName == "New Customers" ? "sf-icon-users" : "")"></span>
                                </div>
                                <div class="e-card-content pb-4 px-4 pt-3">
                                    <p class="fs-5 lh-sm fw-bold text-body mb-2">@data.CurrentValue</p>
                                    <p class="text-body-secondary mb-0">@(data.CurrentPercentage > 0 ? "+" : "")@data.CurrentPercentage&#37; from last month</p>
                                    <div>
                                        <SfChart Width="100%" Height="70" Background="transparent">
                                            <ChartMargin Left="0" Right="0" Top="0" Bottom="0"></ChartMargin>
                                            <ChartArea Border="@ChartAreaBorderSettings"></ChartArea>
                                            <ChartPrimaryXAxis Visible="false">
                                                <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                                                <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                                                <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                                            </ChartPrimaryXAxis>
                                            <ChartPrimaryYAxis Visible="false" Minimum="0" Maximum="4" Interval="1">
                                                <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                                                <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                                                <ChartAxisMinorGridLines Width="0"></ChartAxisMinorGridLines>
                                            </ChartPrimaryYAxis>
                                            <ChartSeriesCollection>
                                                <ChartSeries DataSource="data.MetricPoints" XName="X" YName="Y" Type="ChartSeriesType.SplineArea" Opacity="0.2" Width="2" Fill="@(data.MetricName == "Total Revenue" ? "#0EAB44" : data.MetricName == "Total Orders" ? "#00EFA7" : data.MetricName == "Conversion Rate" ? "#FF9900" : data.MetricName == "New Customers" ? "#0EAB44" : "#000000")">
                                                    <ChartSeriesBorder Color="@(data.MetricName == "Total Revenue" ? "#0EAB44" : data.MetricName == "Total Orders" ? "#00EFA7" : data.MetricName == "Conversion Rate" ? "#FF9900" : data.MetricName == "New Customers" ? "#0EAB44" : "#000000")" Width="2"></ChartSeriesBorder>
                                                </ChartSeries>
                                            </ChartSeriesCollection>
                                        </SfChart>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
