@page "/blocks/list-3"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@inject IJSRuntime JSRuntime

@if (CurrentTheme.Contains("tailwind"))
{
	<section class="bg-white dark:bg-gray-900">
		<div class="flex items-center justify-center min-h-screen">
			<div class="lg:max-w-2xl w-full m-auto p-2 md:p-6 lg:py-8 lg:px-14">
				<SfListView CssClass="!border-0 e-list-template" DataSource="@Messages" aria-label="messages" role="list">
					<ListViewFieldSettings Id="Id" Text="Name" TValue="MessageItem"></ListViewFieldSettings>
					<ListViewTemplates TValue="MessageItem">
						<Template>
							@{
								<div class="e-list-wrapper !px-1 sm:!px-3 border-b border-gray-200 dark:border-gray-600 !py-3 flex items-start">
									<span class="e-avatar e-avatar-circle shrink-0">
										<img src="assets/images/common/avatar/@context.Avatar" alt="profile picture" />
									</span>
									<span class="ml-3 flex flex-col items-start">
										<div class="flex justify-between items-center">
											<span class="e-list-item-header text-base font-semibold text-gray-900 dark:text-white">@context.Name</span>
											<span class="e-badge e-badge-pill ml-2 !px-1.5 border border-gray-200 dark:border-gray-600 flex items-center">@context.Time</span>
										</div>
										<span class="!text-sm !text-gray-700 dark:!text-gray-200 !whitespace-normal !mt-1 !truncate w-full md:w-full !line-clamp-1">@context.Content</span>
										<span class="flex items-center space-x-4 mt-2">
											<SfButton CssClass="e-flat e-lib" IconCss="e-icons sf-icon-message-circle-reply text-base" Type="button" Content="Reply" aria-label="reply" role="button"></SfButton>
											<SfButton CssClass="e-flat e-lib" IconCss="e-icons e-eye e-medium" Type="button" Content="Mark as read" aria-label="mark as read" role="button"></SfButton>
										</span>
									</span>
									<span class="ml-auto">
										<SfButton CssClass="e-icons e-medium e-more-horizontal-1 e-flat !px-2" Type="button" aria-label="more options" role="button"></SfButton>
									</span>
								</div>
							}
						</Template>
					</ListViewTemplates>
				</SfListView>
			</div>
		</div>
	</section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
	<section class="bg-body">
		<div class="d-flex align-items-center justify-content-center min-vh-100">
			<div class="container-lg w-100 m-auto p-2 p-md-4" style="@WidthStyle">
				<SfListView CssClass="border-0 e-list-template" DataSource="@Messages" aria-label="messages" role="list">
					<ListViewFieldSettings Id="Id" Text="Name" TValue="MessageItem"></ListViewFieldSettings>
					<ListViewTemplates TValue="MessageItem">
						<Template>
							@{
								<div class="e-list-wrapper e-list-multi-line px-1 px-sm-3 d-flex align-items-start w-100">
									<span class="e-avatar e-avatar-circle flex-shrink-0">
										<img src="assets/images/common/avatar/@context.Avatar" alt="profile picture" />
									</span>
									<div class="ms-2 ps-1 d-flex flex-column flex-grow-1 align-items-start">
										<div class="d-flex justify-content-between align-items-center">
											<span class="e-list-item-header fs-6 fw-bold">@context.Name</span>
											<span class="e-badge e-badge-pill d-flex align-items-center ms-2 px-2 border border-light-subtle">@context.Time</span>
										</div>
										<span class="mt-1 text-wrap overflow-hidden" style="display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical;">@context.Content</span>
										<span class="d-flex align-items-center gap-4 mt-2">
											<SfButton CssClass="e-flat e-lib e-inherit" IconCss="e-icons sf-icon-message-circle-reply" Type="button" Content="Reply" aria-label="reply" role="button"></SfButton>
											<SfButton CssClass="e-flat e-lib e-inherit" IconCss="e-icons e-eye e-medium" Type="button" Content="Mark as read" aria-label="mark as read" role="button"></SfButton>
										</span>
									</div>
									<SfButton CssClass="e-icons e-medium e-more-horizontal-1 e-flat px-2" Type="button" aria-label="more options" role="button"></SfButton>
								</div>
							}
						</Template>
					</ListViewTemplates>
				</SfListView>
			</div>
		</div>
	</section>
}
