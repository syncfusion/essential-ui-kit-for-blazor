@page "/blocks/ai-sidebar-2"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-800">
        <div id="sidebar-chat" style="height: 861px;">
            <SfSidebar @key="IsMobileView" class="bg-gray-50 dark:bg-gray-700" Width="256px" IsOpen="@IsSidebarOpen" Type="SidebarType.Push" CloseOnDocumentClick="false" ShowBackdrop="@IsBackdropVisible" role="complementary">
                <div class="flex flex-col justify-between h-full">
                    <div>
                        <div class="flex items-center px-4 py-6">
                            <div class="relative h-8 inline-block">
                                <span class="e-avatar e-avatar-circle e-avatar-small shrink-0">
                                    <img src="assets/images/common/avatar/avatar-2.jpg" alt="profile picture" />
                                </span>
                                <div class="absolute w-3 h-3 bg-green-700 dark:bg-green-500 border border-white dark:border-gray-800 rounded-full flex items-center justify-center" style="bottom: -2px; right: -2px;">
                                    <span class="e-icons e-check text-white" style="font-size: 6px"></span>
                                </div>
                            </div>
                            <div class="ml-3">
                                <h4 class="text-base font-medium text-gray-900 dark:text-white">Bob Johnson</h4>
                                <p class="mt-0.5 text-gray-700 dark:text-gray-300">bobjohnson&#64;example.com</p>
                            </div>
                        </div>
                        <div class="px-4">
                            <SfButton CssClass="w-full" IconCss="e-icons e-plus" Type="button" Content="New chat" aria-label="new chat" role="button"></SfButton>
                        </div>
                        <div class="mt-6">
                            <SfListView CssClass="e-list-template border-0" DataSource="@ChatHistory" aria-label="chat history list" role="list">
                                <ListViewFieldSettings TValue="ChatItem" Text="Message" GroupBy="Category"></ListViewFieldSettings>
                                <ListViewTemplates TValue="ChatItem">
                                    <Template Context="data">
                                        <div class="e-list-wrapper !px-3">
                                            <span class="!text-wrap !line-clamp-1 w-full truncate text-base lg:text-sm" title="@data?.Message">@data?.Message</span>
                                        </div>
                                    </Template>
                                    <GroupTemplate Context="data">
                                        <span class="text-gray-700 dark:text-gray-300 text-sm lg:text-xs">@data?.Key.ToUpper()</span>
                                    </GroupTemplate>
                                </ListViewTemplates>
                            </SfListView>
                        </div>
                    </div>
                    <div class="pb-5">
                        <div class="e-card shadow-none rounded-xl p-3 mx-4 my-2 w-auto bg-gray-200 dark:bg-gray-600">
                            <div class="e-card-stacked">
                                <div class="e-card-header !px-1 !py-0 !justify-start">
                                    <div class="e-card-header-title font-medium text-base pb-2">Upgrade to Pro</div>
                                </div>
                                <div class="e-card-content !px-1 !py-0">
                                    <p>Enjoy faster replies, speedier image generation, and more advanced search options.</p>
                                    <p class="mt-6">7-day trial. Cancel anytime.</p>
                                </div>
                                <div class="e-card-actions !pb-1 !px-1 !pt-2">
                                    <SfButton CssClass="w-full" IconCss="e-icons e-plus" Type="button" Content="Invite people" aria-label="invite people" role="button"></SfButton>
                                </div>
                            </div>
                        </div>
                        <SfListView CssClass="border-0 e-list-template" DataSource="@SupportMenu" aria-label="navigation links" role="list">
                            <ListViewFieldSettings TValue="SupportItem" Text="Field"></ListViewFieldSettings>
                            <ListViewTemplates TValue="SupportItem">
                                <Template Context="data">
                                    <div class="e-list-wrapper flex items-center !px-3 gap-3">
                                        <span class="e-icons @data?.FontIcon text-base"></span>
                                        <span class="text-base lg:text-sm">@data?.Field</span>
                                    </div>
                                </Template>
                            </ListViewTemplates>
                        </SfListView>
                    </div>
                </div>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
    <div class="p-3 top-0 left-0 absolute">
        <SfButton CssClass="e-large e-icons e-chevron-right e-round" OnClick="@(() => IsSidebarOpen = !IsSidebarOpen)" Type="button" aria-label="expand menu" role="button"></SfButton>
    </div>
    <!-- SB Code - End -->
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div id="sidebar-chat" style="height: 861px;">
            <SfSidebar @key="IsMobileView" class="bg-body border-light-subtle" Width="256px" IsOpen="@IsSidebarOpen" Type="SidebarType.Push" CloseOnDocumentClick="false" ShowBackdrop="@IsBackdropVisible" role="complementary">
                <div class="d-flex flex-column justify-content-between h-100">
                    <div>
                        <div class="d-flex align-items-center px-3 py-4">
                            <div class="position-relative h-100">
                                <span class="e-avatar e-avatar-circle flex-shrink-0">
                                    <img src="assets/images/common/avatar/avatar-2.jpg" alt="profile picture" />
                                </span>
                                <div class="position-absolute bg-success border border-white rounded-circle d-flex align-items-center justify-content-center" style="width: 12px; height: 12px; bottom: 2px; right: -2px;">
                                    <span class="e-icons e-check text-white" style="font-size: 6px"></span>
                                </div>
                            </div>
                            <div class="ms-2 fs-6">
                                <h4 class="mb-0 fw-medium text-body small">Bob Johnson</h4>
                                <p class="mt-1 text-body-secondary small mb-0">bobjohnson&#64;example.com</p>
                            </div>
                        </div>
                        <div class="px-3">
                            <SfButton CssClass="w-100 e-outline" IconCss="e-icons e-plus" Type="button" Content="New chat" aria-label="new chat" role="button"></SfButton>
                        </div>
                        <div class="mt-4">
                            <SfListView CssClass="e-list-template border-0 rounded-0" DataSource="@ChatHistory" aria-label="chat history list" role="list">
                                <ListViewFieldSettings TValue="ChatItem" Text="Message" GroupBy="Category"></ListViewFieldSettings>
                                <ListViewTemplates TValue="ChatItem">
                                    <Template Context="data">
                                        <div class="e-list-wrapper py-2">
                                            <span class="text-wrap overflow-hidden" title="@data.Message" style="display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical;">@data.Message</span>
                                        </div>
                                    </Template>
                                    <GroupTemplate Context="data">
                                        <span class="text-body-secondary px-1">@data?.Key.ToUpper()</span>
                                    </GroupTemplate>
                                </ListViewTemplates>
                            </SfListView>
                        </div>
                    </div>
                    <div class="pb-3">
                        <div class="e-card bg-body-secondary mx-3 mb-2 p-3 w-auto rounded-4">
                            <div class="e-card-stacked">
                                <div class="e-card-header justify-content-start p-0">
                                    <div class="e-card-header-title fw-medium pb-2 text-body">Upgrade to Pro</div>
                                </div>
                                <div class="e-card-content p-0">
                                    <p class="small text-body-secondary">Enjoy faster replies, speedier image generation, and more advanced search options.</p>
                                    <p class="mt-3 mb-2 text-body-secondary small">7-day trial. Cancel anytime.</p>
                                </div>
                                <div class="e-card-actions p-0">
                                    <SfButton CssClass="w-100" IconCss="e-icons e-plus" Type="button" Content="Invite people" aria-label="invite people" role="button"></SfButton>
                                </div>
                            </div>
                        </div>
                        <SfListView CssClass="border-0 e-list-template rounded-0" DataSource="@SupportMenu" aria-label="navigation links" role="list">
                            <ListViewFieldSettings TValue="SupportItem" Text="Field"></ListViewFieldSettings>
                            <ListViewTemplates TValue="SupportItem">
                                <Template Context="data">
                                    <div class="e-list-wrapper d-flex align-items-center py-2 fs-6 gap-2">
                                        <span class="e-icons @data.FontIcon small"></span>
                                        <span class="small">@data.Field</span>
                                    </div>
                                </Template>
                            </ListViewTemplates>
                        </SfListView>
                    </div>
                </div>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
    <div class="p-3 position-absolute top-0 start-0">
        <SfButton CssClass="e-large e-icons e-chevron-right e-round" OnClick="@(() => IsSidebarOpen = !IsSidebarOpen)" Type="button" aria-label="expand menu" role="button"></SfButton>
    </div>
    <!-- SB Code - End -->
}