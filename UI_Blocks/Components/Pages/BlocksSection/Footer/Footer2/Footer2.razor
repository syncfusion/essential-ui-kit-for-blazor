@page "/blocks/footer-2"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-900">
        <footer class="flex flex-col-reverse sm:flex-row items-center justify-between gap-4 xl:px-10 sm:px-6 px-4 py-6">
            <p class="text-base text-gray-500 dark:text-gray-400">© 2024 ShopNezt. All rights reserved.</p>
            <div class="flex gap-4">
                <a href="javascript:void(0);" class="sf-icon-twitter text-2xl text-gray-500 dark:text-gray-400" aria-label="go to twitter"></a>
                <a href="javascript:void(0);" class="sf-icon-facebook text-2xl text-gray-500 dark:text-gray-400" aria-label="go to facebook"></a>
                <a href="javascript:void(0);" class="sf-icon-linkedin text-2xl text-gray-500 dark:text-gray-400" aria-label="go to linkedin"></a>
            </div>
        </footer>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <footer
            class="py-4 px-3 px-md-4 px-xl-5 d-flex flex-column-reverse flex-sm-row align-items-center justify-content-between gap-3">
            <p class="text-body-secondary mb-0">© 2024 ShopNezt. All rights reserved.</p>
            <div class="d-flex gap-3">
                <a href="javascript:void(0);" class="sf-icon-twitter text-body-secondary fs-4 text-decoration-none" aria-label="go to twitter"></a>
                <a href="javascript:void(0);" class="sf-icon-facebook text-body-secondary fs-4 text-decoration-none" aria-label="go to facebook"></a>
                <a href="javascript:void(0);" class="sf-icon-linkedin text-body-secondary fs-4 text-decoration-none" aria-label="go to linkedin"></a>
            </div>
        </footer>
    </section>
}