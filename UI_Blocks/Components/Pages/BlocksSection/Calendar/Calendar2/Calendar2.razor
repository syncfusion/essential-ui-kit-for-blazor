@page "/blocks/calendar-2"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-900">
        <div style="height: 945px; width: @Width; float: right;">
            <SfSidebar Width="@Width" class="w-full bg-white dark:bg-gray-900" Position="SidebarPosition.Right" Type="SidebarType.Push" @bind-IsOpen="SidebarToggle" ShowBackdrop="true" role="complementary">
                <ChildContent>
                    <div class="bg-white dark:bg-gray-900">
                        <div class="border-b border-gray-200 dark:border-gray-600">
                            <div class="flex justify-between items-center px-4 py-3 border-b border-gray-200 dark:border-gray-600">
                                <h2 class="text-base font-semibold text-gray-900 dark:text-white">Room Filters</h2>
                                <SfButton CssClass="e-flat text-base" IconCss="e-icons e-close" @onclick="ToggleSidebar" aria-label="close sidebar" role="button"></SfButton>
                            </div>
                            <div class="p-4 flex justify-center">
                                <SfCalendar TValue="DateTime" CssClass="e-bigger shadow-none border-none"></SfCalendar>
                            </div>
                        </div>
                        <div class="pt-4 px-1">
                            <SfAccordion class="border-0 bg-transparent">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class='font-normal text-gray-500 dark:text-gray-400'>Floors</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div>
                                                <div class="grid gap-3 p-1">
                                                    <div class="flex justify-between">
                                                        <SfCheckBox Label="Ground Floor" Checked="false" aria-label="ground floor" role="checkbox"></SfCheckBox>
                                                        <span class="e-badge e-badge-pill e-badge-success e-bigger">12 Rooms</span>
                                                    </div>
                                                    <div class="flex justify-between">
                                                        <SfCheckBox Label="First Floor" Checked="false" aria-label="first floor" role="checkbox"></SfCheckBox>
                                                        <span class="e-badge e-badge-pill e-badge-danger e-bigger">Full</span>
                                                    </div>
                                                    <div class="flex justify-between">
                                                        <SfCheckBox Label="Second Floor" Checked="false" aria-label="second floor" role="checkbox"></SfCheckBox>
                                                        <span class="e-badge e-badge-pill e-badge-warning e-bigger">2 Rooms</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                            <div class="slider-wrap px-3 my-6">
                                <label class="text-sm text-gray-500 dark:text-gray-400">
                                    Price Range
                                    <span class="e-icons e-circle-info ml-2"></span>
                                </label>
                                <div class="px-2 ml-4">
                                    <SfSlider @bind-Value="@Value" Min="1000" Max="5000" Step="1" Type="SliderType.Range" Width="225px">
                                        <SliderTicks Placement="Placement.After" LargeStep="4000" Format="c0" />
                                        <SliderTooltip IsVisible="true" Format="c0" />
                                    </SfSlider>
                                </div>
                            </div>
                            <SfAccordion class="border-0 bg-transparent">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class='font-normal text-gray-500 dark:text-gray-400'>Facility</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div class="grid gap-3 text-gray-500 p-1">
                                                <div class="flex justify-between">
                                                    <SfCheckBox Label="Air Conditioner" Checked="false" aria-label="air Conditioner" role="checkbox"></SfCheckBox>
                                                </div>
                                                <div class="flex justify-between">
                                                    <SfCheckBox Label="Swimming Pool" Checked="false" aria-label="swimming Pool" role="checkbox"></SfCheckBox>
                                                </div>
                                                <div class="flex justify-between">
                                                    <SfCheckBox Label="Television" Checked="false" aria-label="television" role="checkbox"></SfCheckBox>
                                                </div>
                                                <div>
                                                    <SfButton CssClass="e-primary e-flat" IconCss="e-icons e-plus" Type="button" aria-label="show more" role="button">Show more</SfButton>
                                                </div>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                        </div>
                    </div>
                </ChildContent>
            </SfSidebar>
        </div>
    </section>
   <!-- SB Code - Start -->
    <div class="p-3 absolute top-0 right-0">
        <SfButton CssClass="e-large e-icons e-chevron-left e-round" OnClick="ToggleSidebar" Type="button" aria-label="expand menu" role="button"></SfButton>
    </div>
    <!-- SB Code - End -->
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div style="height: 1010px; width: @Width; float: right;">
            <SfSidebar Width="@Width" class="bg-body" Position="SidebarPosition.Right" Type="SidebarType.Push" @bind-IsOpen="SidebarToggle" ShowBackdrop="true" role="complementary">
                <ChildContent>
                    <div class="bg-body">
                        <div class="border-bottom border-light-subtle">
                            <div class="d-flex justify-content-between align-items-center px-4 py-3 border-bottom border-light-subtle">
                                <h2 class="h6 fw-semibold text-body mb-0">Room Filters</h2>
                                <SfButton CssClass="e-flat fs-6" IconCss="e-icons e-close" @onclick="ToggleSidebar" Type="button" aria-label="close sidebar" role="button"></SfButton>
                            </div>
                            <div class="p-4 pb-0 d-flex justify-content-center align-items-center">
                                <SfCalendar TValue="DateTime" CssClass="e-bigger shadow-none border-0"></SfCalendar>
                            </div>
                        </div>
                        <div class="pt-2 px-1">
                            <SfAccordion class="border-0 bg-transparent">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class="fw-medium text-body-secondary">Floors</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div class="row gap-3 p-1">
                                                <div class="d-flex justify-content-between">
                                                    <SfCheckBox Label="Ground Floor" Checked="false" aria-label="ground floor" role="checkbox"></SfCheckBox>
                                                    <span class="e-badge e-badge-pill e-badge-success e-bigger">12 Rooms</span>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <SfCheckBox Label="First Floor" Checked="false" aria-label="first floor" role="checkbox"></SfCheckBox>
                                                    <span class="e-badge e-badge-pill e-badge-danger e-bigger">Full</span>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <SfCheckBox Label="Second Floor" Checked="false" aria-label="secondd floor" role="checkbox"></SfCheckBox>
                                                    <span class="e-badge e-badge-pill e-badge-warning e-bigger">2 Rooms</span>
                                                </div>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                            <div class="sliderwrap px-3 my-4">
                                <label class="fw-medium text-body-secondary">
                                    Price Range
                                    <span class="e-icons e-circle-info ms-2"></span>
                                </label>
                                <div class="px-2 ms-3">
                                    <SfSlider @bind-Value="@Value" Min="1000" Max="5000" Step="1" Type="SliderType.Range" Width="225px">
                                        <SliderTicks Placement="Placement.After" LargeStep="4000" Format="c0" />
                                        <SliderTooltip IsVisible="true" Format="c0" />
                                    </SfSlider>
                                </div>
                            </div>
                            <SfAccordion class="border-0 bg-transparent">
                                <AccordionItems>
                                    <AccordionItem Expanded="true">
                                        <HeaderTemplate>
                                            <div class="fw-medium text-body-secondary">Facility</div>
                                        </HeaderTemplate>
                                        <ContentTemplate>
                                            <div class="row gap-3 p-1">
                                                <div class="d-flex justify-content-between">
                                                    <SfCheckBox Label="Air Conditioner" Checked="false" aria-label="air Conditioner" role="checkbox"></SfCheckBox>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <SfCheckBox Label="Swimming Pool" Checked="false" aria-label="swimming Pool" role="checkbox"></SfCheckBox>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <SfCheckBox Label="Television" Checked="false" aria-label="television" role="checkbox"></SfCheckBox>
                                                </div>
                                                <div>
                                                    <SfButton CssClass="e-primary e-flat" IconCss="e-icons e-plus" Type="button" aria-label="show more" role="button">Show more</SfButton>
                                                </div>
                                            </div>
                                        </ContentTemplate>
                                    </AccordionItem>
                                </AccordionItems>
                            </SfAccordion>
                        </div>
                    </div>
                </ChildContent>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
    <div class="p-3 position-absolute top-0 end-0">
        <SfButton CssClass="e-large e-icons e-chevron-left e-round" @onclick="ToggleSidebar" Type="button" aria-label="expand menu" role="button"></SfButton>
    </div>
    <!-- SB Code - End -->
}