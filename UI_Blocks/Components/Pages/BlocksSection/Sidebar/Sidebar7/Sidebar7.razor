@page "/blocks/Sidebar-7"
@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-white dark:bg-gray-950">
        <div style="height: 605px;">
            <SfSidebar class="bg-gray-50 dark:bg-gray-900 !border-r !border-gray-200 dark:!border-gray-700" Width="256px" @bind-IsOpen="SidebarToggle" Type="SidebarType.Push" aria-label="main navigation menu" role="complementary">
                <div class="flex flex-col h-screen justify-between">
                    <div>
                        <div class="flex items-center p-4">
                            <span class="e-avatar e-avatar-circle e-avatar-small">
                                <img src="assets/images/common/avatar/avatar-2.jpg" alt="profile picture" />
                            </span>
                            <div class="ml-3">
                                <div class="text-base font-medium leading-normal text-gray-900 dark:text-white">John Wick</div>
                                <p class="mb-0 text-gray-900 dark:text-white">johnwick&#64;123.com</p>
                            </div>
                        </div>
                        <div class="px-4 py-3">
                            <div class="e-input-group">
                                <span class="e-input-group-icon e-icons e-search"></span>
                                <input class="e-input !pl-0" type="text" placeholder="Search projects" aria-label="search projects" role="textbox" />
                            </div>
                        </div>
                        <div>
                            <SfListView CssClass="border-0" DataSource="@NavigationMenu" aria-label="main navigation links" role="list">
                                <ListViewFieldSettings TValue="MenuItem"></ListViewFieldSettings>
                                <ListViewTemplates TValue="MenuItem">
                                    <Template>
                                        <div class="e-list-wrapper flex items-center px-1">
                                            <span class="e-icons @context.FontIcon text-base"></span>
                                            <span class="text-base font-normal pl-4">@context.Field</span>
                                        </div>
                                    </Template>
                                </ListViewTemplates>
                            </SfListView>
                        </div>
                        <hr class="m-4 border-gray-200 dark:border-gray-700" />
                        <div>
                            <SfListView CssClass="border-0" DataSource="@SupportMenu" aria-label="other navigation links" role="list">
                                <ListViewFieldSettings TValue="MenuItem"></ListViewFieldSettings>
                                <ListViewTemplates TValue="MenuItem">
                                    <Template>
                                        <div class="e-list-wrapper flex items-center px-1">
                                            <span class="e-icons @context.FontIcon text-base"></span>
                                            <span class="text-base font-normal pl-4">@context.Field</span>
                                        </div>
                                    </Template>
                                </ListViewTemplates>
                            </SfListView>
                        </div>
                    </div>
                    <div class="p-4">
                        <div>
                            <p class="text-base text-gray-700 dark:text-gray-300">Space Left</p>
                            <h3 class="text-xl mt-2 text-gray-700 font-semibold dark:text-gray-300">70 GB free of 150 GB</h3>
                        </div>
                        <div class="py-3">
                            <SfProgressBar Type="ProgressType.Linear" CornerRadius="CornerType.Square" Value="54" Height="8px" Width="205px" TrackThickness="8" ProgressThickness="8" ProgressColor="#4F46E5"></SfProgressBar>
                        </div>
                        <div class="py-3">
                            <SfButton IconCss="e-icons sf-icon-upload-cloud text-base" CssClass="e-outline w-full" content="Upgrade to Pro" Type="button" aria-label="upgrade to professional version" role="button"></SfButton>
                        </div>
                    </div>
                </div>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
        <div class="p-3 top-0 left-0 absolute">
            <SfButton CssClass="e-large e-icons e-chevron-right e-round" Type="button" aria-label="expand menu" role="button" @onclick="ToggleSidebar"></SfButton>
        </div>
    <!-- SB Code - End -->
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-body">
        <div style="height: 630px;">
            <SfSidebar Width="256px" @bind-IsOpen="SidebarToggle" Type="SidebarType.Push" aria-label="main navigation menu" role="complementary">
                <div class="d-flex flex-column vh-100 justify-content-between">
                    <div>
                        <div class="d-flex align-items-center px-3 pb-3 mt-4">
                            <span class="e-avatar e-avatar-circle e-avatar-small">
                                <img src="assets/images/common/avatar/avatar-2.jpg" alt="profile picture" />
                            </span>
                            <div class="ms-2">
                                <div class="fs-6 fw-medium text-body">John Wick</div>
                                <p class="mb-0 text-body-secondary">johnwick&#64;123.com</p>
                            </div>
                        </div>
                        <div class="px-3">
                            <div class="e-input-group">
                                <span class="e-input-group-icon e-icons e-search border-end-0"></span>
                                <input class="e-input" type="text" placeholder="Search projects" aria-label="search projects" role="textbox" />
                            </div>
                        </div>
                        <div class="mt-3">
                            <SfListView CssClass="border-0" DataSource="@NavigationMenu" aria-label="main navigation links" role="list">
                                <ListViewFieldSettings TValue="MenuItem"></ListViewFieldSettings>
                                <ListViewTemplates TValue="MenuItem">
                                    <Template>
                                        <div class="e-list-wrapper d-flex align-items-center px-1">
                                            <span class="e-icons @context.FontIcon fs-6"></span>
                                            <span class="mb-0 ms-1 ps-2 fs-6">@context.Field</span>
                                        </div>
                                    </Template>
                                </ListViewTemplates>
                            </SfListView>
                        </div>
                        <p class="m-3 fs-6 text-body-secondary">Others</p>
                        <div>
                            <SfListView CssClass="border-0 e-bigger" DataSource="@SupportMenu" aria-label="other navigation links" role="list">
                                <ListViewFieldSettings TValue="MenuItem"></ListViewFieldSettings>
                                <ListViewTemplates TValue="MenuItem">
                                    <Template>
                                        <div class="e-list-wrapper d-flex align-items-center px-1">
                                            <span class="e-icons @context.FontIcon fs-6"></span>
                                            <span class="fs-6 fw-normal ps-2 ms-1">@context.Field</span>
                                        </div>
                                    </Template>
                                </ListViewTemplates>
                            </SfListView>
                        </div>
                    </div>
                    <div class="p-3">
                        <div>
                            <span class="text-body-secondary fs-6 mb-0">Space Left</span>
                            <h3 class="mt-1 text-body fw-medium fs-5 mb-0">70 GB free of 150 GB</h3>
                        </div>
                        <div class="mt-2">
                            <SfProgressBar Type="ProgressType.Linear" Value="54" Height="8" Width="205" TrackThickness="8" ProgressThickness="8" ProgressColor="#0D6EFD" CornerRadius="CornerType.Round"></SfProgressBar>
                        </div>
                        <div class="mt-3">
                            <SfButton class="e-outline w-100" IconCss="e-icons sf-icon-upload-cloud fs-6" Content="Upgrade to Pro" Type="button" aria-label="upgrade to professional version" role="button"></SfButton>
                        </div>
                    </div>
                </div>
            </SfSidebar>
        </div>
    </section>
    <!-- SB Code - Start -->
        <div class="py-3 px-1 position-absolute top-0 start-0">
            <SfButton CssClass="e-large e-icons e-chevron-right e-round" Type="button" aria-label="expand menu" role="button" @onclick="ToggleSidebar"></SfButton>
        </div>
    <!-- SB Code - End -->
}