@page "/blocks/cards-15"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks
	
@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-950">
        <div class="px-4 sm:px-6 py-20" style="min-height: 36rem;">
            <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-10">
                <div class="e-card e-bigger rounded-lg justify-start">
                    <div class="e-card-header !pb-3">
                        <h1 class="text-xl font-semibold text-gray-950 dark:text-gray-50 w-full truncate">Effective Study</h1>
                    </div>
                    <div class="e-card-content">
                        <p class="text-base">Enhance your study sessions with proven strategies to improve focus and retention. Learn time management techniques to active learning methods.</p>
                    </div>
