@page "/blocks/cards-1"

@inherits UI_Blocks.Components.Pages.MainSection.Demo

@ThemeLinks

@if (CurrentTheme.Contains("tailwind"))
{
    <section class="bg-gray-50 dark:bg-gray-950">
        <div class="px-4 py-20 sm:px-6">
            <div class="grid gap-6 sm:grid-cols-2 sm:gap-8 lg:grid-cols-3 xl:gap-10">
                <div class="e-card rounded-lg gap-6 e-bigger">
                    <div class="e-card-image">
                        <img class="h-56 w-full object-cover" src="assets/images/card/image-button-card/adventure-awaits.jpg" alt="adventure awaits" />
                    </div>
                    <div class="e-card-stacked grow">
                        <div class="e-card-content text-center grow">
                            <h2 class="text-xl font-semibold mb-3 text-gray-950 dark:text-gray-50 line-clamp-2">Adventure Awaits</h2>
                            <p class="text-base mb-2 dark:text-gray-200">Discover exciting travel destinations that offer unique experiences and breathtaking landscapes, from serene beaches to rugged mountains.</p>
                        </div>
                        <div class="e-card-actions leading-9 w-full">
                            <SfButton CssClass="e-block" Content="View Details" Type="button" aria-label="view details about adventure awaits" role="button"></SfButton>
                        </div>
                    </div>
                </div>
                <div class="e-card rounded-lg gap-6 e-bigger">
                    <div class="e-card-image">
                        <img class="h-56 w-full object-cover" src="assets/images/card/image-button-card/gourmet-delights.jpg" alt="gourmet delights" />
                    </div>
                    <div class="e-card-stacked grow">
                        <div class="e-card-content text-center grow">
                            <h2 class="text-xl font-semibold mb-3 text-gray-950 dark:text-gray-50 line-clamp-2">Gourmet Delights</h2>
                            <p class="text-base mb-2 dark:text-gray-200">Dive into a world of culinary delights with our selection of gourmet recipes and cooking tips, great for both seasoned chefs and home cooks.</p>
                        </div>
                        <div class="e-card-actions leading-9 w-full">
                            <SfButton CssClass="e-block" Content="View Details" Type="button" aria-label="view details about gourmet delights" role="button"></SfButton>
                        </div>
                    </div>
                </div>
                <div class="e-card rounded-lg gap-6 e-bigger">
                    <div class="e-card-image">
                        <img class="h-56 w-full object-cover" src="assets/images/card/image-button-card/productivity-boost.jpg" alt="productivity boost" />
                    </div>
                    <div class="e-card-stacked grow">
                        <div class="e-card-content text-center grow">
                            <h2 class="text-xl font-semibold mb-3 text-gray-950 dark:text-gray-50 line-clamp-2">Productivity Boost</h2>
                            <p class="text-base mb-2 dark:text-gray-200">Unlock the secrets to enhanced productivity with practical tips and tools designed to help you stay organized and focused.</p>
                        </div>
                        <div class="e-card-actions leading-9 w-full">
                            <SfButton CssClass="e-block" Content="View Details" Type="button" aria-label="view details about productivity boost" role="button"></SfButton>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else if (CurrentTheme.Contains("bootstrap5.3"))
{
    <section class="bg-dark-subtle">
        <div class="py-5 px-3 px-md-4">
            <div class="row g-xl-5 g-4">
                <div class="col-sm-6 col-lg-4 d-flex">
                    <div class="e-card e-bigger rounded-3">
                        <div class="e-card-image">
                            <img class="object-fit-cover w-100" src="assets/images/card/image-button-card/adventure-awaits.jpg" alt="adventure awaits" style="height: 232px;" />
                        </div>
                        <div class="e-card-stacked flex-grow-1">
                            <div class="e-card-content text-center flex-grow-1 py-4 text-body">
                                <h4 class="mb-3 fw-bold lh-sm text-truncate">Adventure Awaits</h4>
                                <p class="fs-6 mb-0">Discover exciting travel destinations that offer unique experiences and breathtaking landscapes, from serene beaches to rugged mountains.</p>
                            </div>
                            <div class="e-card-actions e-bigger pb-4 w-100 lh-lg">
                                <SfButton CssClass="e-block e-outline" Content="View Details" Type="button" aria-label="view details about adventure awaits" role="button"></SfButton>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4 d-flex">
                    <div class="e-card e-bigger rounded-3">
                        <div class="e-card-image">
                            <img class="object-fit-cover w-100" src="assets/images/card/image-button-card/gourmet-delights.jpg" alt="gourmet delights" style="height: 232px;" />
                        </div>
                        <div class="e-card-stacked flex-grow-1">
                            <div class="e-card-content text-center flex-grow-1 py-4 text-body">
                                <h4 class="mb-3 fw-bold lh-sm text-truncate">Gourmet Delights</h4>
                                <p class="fs-6 mb-0">Dive into a world of culinary delights with our selection of gourmet recipes and cooking tips, great for both seasoned chefs and home cooks.</p>
                            </div>
                            <div class="e-card-actions e-bigger pb-4 w-100 lh-lg">
                                <SfButton CssClass="e-block e-outline" Content="View Details" Type="button" aria-label="view details about gourmet delights" role="button"></SfButton>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4 d-flex">
                    <div class="e-card e-bigger rounded-3">
                        <div class="e-card-image">
                            <img class="object-fit-cover w-100" src="assets/images/card/image-button-card/productivity-boost.jpg" alt="productivity boost" style="height: 232px;" />
                        </div>
                        <div class="e-card-stacked flex-grow-1">
                            <div class="e-card-content text-center flex-grow-1 py-4 text-body">
                                <h4 class="mb-3 fw-bold lh-sm text-truncate">Productivity Boost</h4>
                                <p class="fs-6 mb-0">Unlock the secrets to enhanced productivity with practical tips and tools designed to help you stay organized and focused.</p>
                            </div>
                            <div class="e-card-actions e-bigger pb-4 w-100 lh-lg">
                                <SfButton CssClass="e-block e-outline" Content="View Details" Type="button" aria-label="view details about productivity boost" role="button"></SfButton>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
